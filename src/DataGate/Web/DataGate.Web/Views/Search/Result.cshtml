@model DataGate.Web.ViewModels.Search.SearchListAllViewModel
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Search Results"];
    var targetArea = GlobalConstants.ShareClassAreaName;
    var targetRoute = GlobalConstants.ShareClassDetailsRouteName;
}

<div class="table-search-wrapper">
    <h1>@Localizer["Result"]</h1>
    <p>@Localizer["Your search criteria was"] : @Model.SearchTerm</p>
    <p>@Localizer["Number of results"] : @Model.Results.ToList().Count</p>

    @if (Model.Results.Any())
    {
        <table class="table-bordered table-hover table-view-pharus w-35 mx-auto">
            <thead>
                <tr>
                    <th class="text-secondary p-1">
                        ISIN CODE
                    </th>
                    <th class="text-secondary p-1">
                        SHARE NAME
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var result in Model.Results)
                {
                    <tr>
                        <td class="p-1 td-name-link">
                            <a asp-area="@targetArea" asp-route="@targetRoute" asp-route-id="@result.ScId" asp-route-date="@Model.Date">
                                @result.ScIsinCode
                            </a>
                        </td>
                        <td>
                            @result.ScOfficialShareClassName
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>@Localizer["No result produced by your request."]</p>
        <p>@Localizer["Please modify your search criteria."]</p>
    }

</div>