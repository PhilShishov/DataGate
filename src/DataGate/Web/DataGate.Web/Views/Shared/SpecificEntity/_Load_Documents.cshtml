@model SpecificEntityViewModel
@{
    var controllerName = this.ViewContext.RouteData.Values["controller"].ToString();
    var areaName = string.Empty;

    if (controllerName == GlobalConstants.FundDetailsControllerName)
    {
        areaName = GlobalConstants.FundAreaName;
    }
}

<div class="w-50">
    <form method="post">
        <div class="mb-5">
            @if (controllerName == GlobalConstants.FundDetailsControllerName)
            {
                <u class="text-torshia">PROSPECTUS</u><br>

                <table class="table table-borderless table-hover w-100 tbl-distinct-documents">
                    <tbody>
                        @foreach (var document in Model.DistinctDocuments)
                        {
                            <tr class="@document.FileId">
                                <td>
                                    <button class="btn-link-pharus text-left"
                                            formtarget="_blank"
                                            type="submit"
                                            asp-area=""
                                            asp-route="files"
                                            asp-route-name="@document.Name"
                                            name="docValue"
                                            value="@document.Name">
                                        @Html.Encode(System.IO.Path.GetFileNameWithoutExtension(document.Name))
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <u class="text-torshia">DOCUMENTS</u><br>

                <div class="mt-3">
                    <table class="table table-hover w-100 tbl-distinct-documents">
                        <thead>
                            <tr>
                                <th class="text-secondary p-1">File Description</th>
                                <th class="text-secondary p-1">File Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var document in Model.DistinctDocuments)
                            {
                                <tr class="@document.FileId">
                                    <td>
                                        @document.Description
                                    </td>
                                    <td>
                                        <button class="btn-link-pharus text-left"
                                                formtarget="_blank"
                                                type="submit"
                                                asp-area=""
                                                asp-route="files"
                                                asp-route-name="@document.Name"
                                                name="docValue"
                                                value="@document.Name">
                                            @Html.Encode(System.IO.Path.GetFileNameWithoutExtension(document.Name))
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>

        <div class="mb-5">
            <u class="text-torshia">AGREEMENTS</u><br>

            <div class="mt-3">
                <table class="table table-hover w-100 tbl-distinct-agreements">
                    <thead>
                        <tr>
                            <th class="text-secondary p-1">File Description</th>
                            <th class="text-secondary p-1">File Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var agreement in Model.DistinctAgreements)
                        {
                            <tr class="@agreement.FileId">
                                <td>
                                    @agreement.Description
                                </td>
                                <td>
                                    <button class="btn-link-pharus text-left"
                                            formtarget="_blank"
                                            type="submit"
                                            asp-area=""
                                            asp-route="files"
                                            asp-route-name="@agreement.Name"
                                            name="agrValue"
                                            value="@agreement.Name">
                                        @Html.Encode(System.IO.Path.GetFileNameWithoutExtension(agreement.Name))
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <input type="hidden" name="AreaName" value="@areaName" />
    </form>
</div>