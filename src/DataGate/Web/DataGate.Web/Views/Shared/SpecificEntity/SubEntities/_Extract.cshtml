@{
    var controllerName = this.ViewContext.RouteData.Values["controller"].ToString();
}

<div>
    <div class="d-flex justify-content-between h-70">
        <div>
            <button class="btn btn-sm btn-primary"
                    type="submit"
                    formaction="/@controllerName/ExtractExcelSubEntities"
                    name="extract_Excel">
                Excel
            </button>
        </div>

        <div class="ml-4">
            <button class="btn btn-sm btn-primary"
                    type="submit"
                    formaction="/@controllerName/ExtractPdfSubEntities"
                    name="extract_Pdf">
                PDF
            </button>
        </div>
    </div>

    <div class="text-center">
        <label class="lbl-toolbar-pharus">Extract</label>
    </div>
</div>

<div class="vertical mx-3"></div>