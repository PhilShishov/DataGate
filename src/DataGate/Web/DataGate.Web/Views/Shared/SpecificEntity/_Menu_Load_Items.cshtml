@inject IStringLocalizer<SharedResources> SharedLocalizer

@{
    var controller = this.ViewContext.RouteData.Values["controller"].ToString();
}

<div class="w-60">
    <div>
        <div class="row">
            @if (controller == GlobalConstants.FundDetailsControllerName)
            {
                <div class="column-add-info">
                    <div class="card-add-info">
                        <button id="btn-open-subentities">@SharedLocalizer["SUBS"]</button>
                    </div>
                </div>
            }

            @if (controller == GlobalConstants.SubFundDetailsControllerName)
            {
                <div class="column-add-info">
                    <div class="card-add-info">
                        <button id="btn-open-subentities">@SharedLocalizer["SHARES"]</button>
                    </div>
                </div>

                <div class="column-add-info">
                    <div class="card-add-info">
                        <button id="btn-open-chart">@SharedLocalizer["CHARTS"]</button>
                    </div>
                </div>
            }

            <div class="column-add-info">
                <div class="card-add-info">
                    <button id="btn-open-distinct">@SharedLocalizer["DISTINCT"]</button>
                </div>
            </div>

            @if (controller == GlobalConstants.ShareClassDetailsControllerName)
            {
                <div class="column-add-info">
                    <div class="card-add-info">
                        <button id="btn-open-chart">@SharedLocalizer["CHARTS"]</button>
                    </div>
                </div>
            }

            <div class="column-add-info">
                <div class="card-add-info">
                    <button id="btn-open-timeline">@SharedLocalizer["TIMELINE"]</button>
                </div>
            </div>

            <div class="column-add-info">
                <div class="card-add-info">
                    <button id="btn-open-documents">@SharedLocalizer["DOCUMENTS"]</button>
                </div>
            </div>

            <div class="column-add-info">
                <div class="card-add-info">
                    <button id="btn-open-agreements">@SharedLocalizer["AGREEMENTS"]</button>
                </div>
            </div>
        </div>
    </div>
    <form id="load-form" method="get"></form>

    <!-- Container for aum chart selected option-->
    <div id="aumChart" class="mt-5 d-none"></div>

    <!-- Container for distinct documents selected option-->
    <div id="distinctDocuments" class="mt-5 d-none"></div>

    <!-- Container for all documents selected option-->
    <div id="allDocuments" class="mt-5 d-none"></div>

    <!-- Container for all agreements selected option-->
    <div id="allAgreements" class="mt-5 d-none"></div>

    <!-- Container for timeline changes selected option-->
    <div class="container py-5 row d-none" id="timelineChanges"></div>
</div>