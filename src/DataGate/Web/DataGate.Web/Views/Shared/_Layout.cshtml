<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="Content-Security-Policy" content="upgrade-insecure-requests">
    <title>@ViewData["Title"] Pharus DataGate</title>

    <environment include="Development">
        <link type="text/css" rel="stylesheet" href="~/css/reset-css.css" />
        <link type="text/css" rel="stylesheet" href="~/css/login.css" />
        <link type="text/css" rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

        <link type="text/css" rel="stylesheet" href="~/css/pharus/pharus.css" />
        <link type="text/css" rel="stylesheet" href="~/css/pharus/pharus-mediaquery.css" />
        <link type="text/css" rel="stylesheet" href="~/css/pharus/pharus-buttons.css" />
        <link type="text/css" rel="stylesheet" href="~/css/pharus/pharus-checkbox.css" />
        <link type="text/css" rel="stylesheet" href="~/css/pharus/pharus-search.css" />
        <link type="text/css" rel="stylesheet" href="~/css/pharus/pharus-multiselect.css" />
        <link type="text/css" rel="stylesheet" href="~/css/pharus/pharus-scrollbar.css" />
        <link type="text/css" rel="stylesheet" href="~/css/pharus/pharus-select.css" />
        <link type="text/css" rel="stylesheet" href="~/css/pharus/pharus-sidenav.css" />
        <link type="text/css" rel="stylesheet" href="~/css/pharus/pharus-timeline.css" />
        <link type="text/css" rel="stylesheet" href="~/css/pharus/pharus-toolbar.css" />
        <link type="text/css" rel="stylesheet" href="~/css/style.css" />

        <style>
            body {
                background-image: none;
            }
        </style>
    </environment>

    <environment include="Production">
        <link type="text/css" rel="stylesheet" href="~/css/reset-css.css" />
        <link type="text/css" rel="stylesheet" href="~/css/login.css" />
        <link type="text/css" rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

        <link type="text/css" rel="stylesheet" href="~/css/pharus/pharus.css" />
        <link type="text/css" rel="stylesheet" href="~/css/pharus/pharus-mediaquery.css" />
        <link type="text/css" rel="stylesheet" href="~/css/pharus/pharus-buttons.css" />
        <link type="text/css" rel="stylesheet" href="~/css/pharus/pharus-checkbox.css" />
        <link type="text/css" rel="stylesheet" href="~/css/pharus/pharus-search.css" />
        <link type="text/css" rel="stylesheet" href="~/css/pharus/pharus-multiselect.css" />
        <link type="text/css" rel="stylesheet" href="~/css/pharus/pharus-scrollbar.css" />
        <link type="text/css" rel="stylesheet" href="~/css/pharus/pharus-select.css" />
        <link type="text/css" rel="stylesheet" href="~/css/pharus/pharus-sidenav.css" />
        <link type="text/css" rel="stylesheet" href="~/css/pharus/pharus-timeline.css" />
        <link type="text/css" rel="stylesheet" href="~/css/pharus/pharus-toolbar.css" />
        <link type="text/css" rel="stylesheet" href="~/css/style.css" />

        <style>
            body {
                background-image: none;
            }
        </style>
    </environment>

    @RenderSection("Styles", required: false)
</head>

<body>
    @if (this.User.Identity.IsAuthenticated)
    {
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-pharus">

                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <span style="cursor:pointer"
                              id="sideNavIcon">
                            <img src="/images/Logo_Pharus.jpg"
                                 class="img-responsive"
                                 width="50"
                                 alt="Pharus Management">
                        </span>

                        <ul id="mySidenav" class="sidenav">
                            <li>
                                <a style="cursor:pointer"
                                   id="closeBtn"
                                   class="closebtn">
                                    &times;
                                </a>
                            </li>
                            <li class="dropdown pt-5">
                                <button class="dropdown-btn"
                                        name="dr-btn-SideNav">
                                    Funds<i class="fa fa-caret-down"></i>
                                </button>
                                <div id="myDropdown" class="dropdown-container">
                                    <a class="dropdown-item font-weight-light" href="/Funds/All">List</a>
                                    @if (this.User.IsInRole("Admin"))
                                    {
                                        <a class="dropdown-item font-weight-light" href="/Funds/CreateFund">Create</a>
                                    }

                                    <a class="dropdown-item font-weight-light" href="#">Report</a>
                                </div>
                            </li>

                            <li class="dropdown">
                                <button class="dropdown-btn"
                                        name="dr-btn-SideNav">
                                    Sub Funds<i class="fa fa-caret-down"></i>
                                </button>
                                <div id="myDropdown" class="dropdown-container">
                                    <a class="dropdown-item font-weight-light" href="/SubFunds/All">List</a>
                                    @if (this.User.IsInRole("Admin"))
                                    {
                                        <a class="dropdown-item font-weight-light" href="/SubFunds/CreateSubFund">Create</a>
                                    }

                                    <a class="dropdown-item font-weight-light" href="#">Report</a>
                                </div>
                            </li>
                            <li class="dropdown">
                                <button class="dropdown-btn"
                                        name="dr-btn-SideNav">
                                    Share Classes<i class="fa fa-caret-down"></i>
                                </button>
                                <div id="myDropdown" class="dropdown-container">
                                    <a class="dropdown-item font-weight-light" href="/ShareClasses/All">List</a>
                                    @if (this.User.IsInRole("Admin"))
                                    {
                                        <a class="dropdown-item font-weight-light" href="/ShareClasses/CreateShareClass">Create</a>
                                    }

                                    <a class="dropdown-item font-weight-light" href="#">Report</a>
                                </div>
                            </li>
                            <li>
                                <a href="/Agreements/All">
                                    Agreements
                                </a>
                            </li>
                        </ul>

                    </li>
                </ul>

                <button class="navbar-toggler ml-auto"
                        type="button"
                        data-toggle="collapse"
                        data-target="#navbarNav"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse" id="navbarNav">
                    <div id="intro" class="text-right">
                        <ul class="navbar-nav">
                            @if (this.User.IsInRole("Admin"))
                            {
                                <li class="nav-item active">
                                    <a class="nav-link nav-link-white active" href="/Admin/Index">Panel</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item active">
                                    <a class="nav-link nav-link-white active" href="/Home/Index">Home</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link nav-link-white active" href="/Identity/Account/Logout">Logout</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <main class="mb-4 ml-2">
            @RenderBody()
        </main>
        <footer>
            <div class="bg-pharus footer-pharus">
                <div class="text-white text-center">&copy; Pharus Management Lux SA 16, Avenue de la Gare L- 1610 Luxembourg T. +352 28 55 69 - 1</div>
            </div>
        </footer>
    }
    else
    {
        <main>
            @RenderBody()
        </main>
    }

    <environment include="Development">
        <script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
                integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
                crossorigin="anonymous"></script>
        <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>

        <script type="text/javascript" src="~/js/manageSideNavBar.js"></script>
        <script type="text/javascript" src="~/js/manageDropdowns.js"></script>
    </environment>

    <environment include="Production">
        <script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
                integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
                crossorigin="anonymous"></script>
        <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>

        <script type="text/javascript" src="~/js/manageSideNavBar.js"></script>
        <script type="text/javascript" src="~/js/manageDropdowns.js"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>