@using DataGate.Common
@model DataGate.Web.ViewModels.Entities.EntitiesViewModel

@{
    var controller = this.ViewContext.RouteData.Values[GlobalConstants.ControllerRouteDataValue].ToString();
    var targetRoute = string.Empty;

    if (controller == GlobalConstants.FundsControllerName)
    {
        targetRoute = "fundDetails";
    }

    else if (controller == GlobalConstants.SubFundsControllerName)
    {
        targetRoute = "subfundDetails";
    }
    else if (controller == GlobalConstants.ShareClassesControllerName)
    {
        targetRoute = "shareclassDetails";
    }

    var entityId = string.Empty;
}
<div class="table-responsive border-0 mx-auto table-wrapper-double-scroll">
    <table class="table table-hover table-view-pharus" id="table-to-extract">
        <thead>
            <tr>
                @for (int header = 0; header < Model.Headers.Count; header++)
                {
                    <th class="pr-3"
                        data-toggle="tooltip"
                        data-placement="bottom"
                        title="@Model.Headers[header]">
                        @Model.Headers[header]
                    </th>
                }
            </tr>
        </thead>
        <tbody id="tbody-update-inactive">
            @foreach (var row in Model.Values)
            {
                entityId = row[GlobalConstants.IndexEntityIdInTable];

                <tr>
                    @for (int col = 0; col < row.Length; col++)
                    {
                        if (Model.Headers.ToList()[col].Contains("NAME"))
                        {
                            <td class="p-1 td-name-link">
                                <a asp-route="@targetRoute" asp-route-id="@entityId" asp-route-date="@Model.Date">
                                    @row[col]
                                </a>
                            </td>
                        }
                        else
                        {
                            <td class="p-1">
                                @row[col]
                            </td>
                        }
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
