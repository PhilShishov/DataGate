@model DataGate.Web.ViewModels.Entities.EntitiesViewModel

<div>
    <table class="table" name="Entities" hidden>
        <thead>
            <tr>
                @for (int row = 0; row < 1; row++)
                {
                    @for (int col = 0; col < Model.Entities[row].Length; col++)
                    {
                        <th>
                            <h5>
                                @Html.TextBoxFor(af => Model.Entities[row][col],
                                    new
                                         {
                                        @readonly = true
                                    })
                            </h5>
                        </th>
                    }
                }
            </tr>
        </thead>
        <tbody>
            @for (int row = 1; row < Model.Entities.Count; row++)
            {
                <tr>
                    @for (int col = 0; col < Model.Entities[row].Length; col++)
                    {
                        <td>
                            @Html.TextBoxFor(af => Model.Entities[row][col],
                                new
                                     {
                                    @readonly = true
                                })
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
    <span asp-validation-for="Entities" class="text-danger"></span>
</div>