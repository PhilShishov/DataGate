@model DataGate.Web.ViewModels.Entities.EntitiesOverviewViewModel

<div>
    <table class="table" name="Headers">
        <tr>
            @for (int row = 0; row < Model.Headers.Count; row++)
            {
                @for (int col = 0; col < Model.Headers[row].Length; col++)
                {
                    <th>
                        <input type="text" asp-for="@Model.Headers[row][col]" readonly />
                    </th>
                }
            }
        </tr>
    </table>
    <table class="table" name="Values">
        <tbody>

            @for (int row = 0; row < Model.Values.Count; row++)
            {
                <tr>
                    @for (int col = 0; col < Model.Values[row].Length; col++)
                    {
                        <td>
                            <input type="text" asp-for="@Model.Values[row][col]" readonly />
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>