@model EntitiesViewModel
@inject IStringLocalizer<SharedResources> SharedLocalizer

<form class="d-flex"
      method="post"
      asp-action="All"
      id="update-form">

    <div class="select-div-pharus mt-0">
        <select asp-for="SelectTerm"
                id="SelectTerm"
                class="form-control input-sm"
                onchange="this.form.submit()">
            <option value=@Model.SelectTerm selected>@Model.SelectTerm</option>
        </select>
    </div>

    <div class="ml-4">
        <button type="button"
                class="btn btn-sm btn-pharus"
                data-toggle="modal"
                data-target="#columnModal"
                name="showColumnSelection">
            @SharedLocalizer["Column Choice"]
        </button>
    </div>

    <div class="el-switch-div ml-4">
        <label class="el-switch el-switch-sm mt-1">
            <input type="checkbox"
                   asp-for="IsActive"
                   id="activeCheckBox">
            <span class="el-switch-style"></span>
            <span class="d-block">
                @SharedLocalizer["Show"]
            </span>
            <span>@SharedLocalizer["Active"]</span>

        </label>
    </div>
    <div class="ml-4">
        <a class="btn btn-pharus btn-sm" asp-action="All">
            @SharedLocalizer["Reset"]
        </a>
    </div>

    <div class="vertical mx-3"></div>

    <div>
        <input type="date"
               asp-for="Date"
               min="2018-01-01">
        <input type="submit"
               class="btn btn-pharus btn-sm mb-1"
               name="Command"
               value="Update Table"></>
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <partial name="AllEntities/_ModalSelect" />
</form>

<div class="vertical mx-3"></div>

<div>
    <form method="post" id="extract-form"></form>

    <button class="btn btn-sm btn-pharus"
            id="btn-extract-excel"
            type="button"
            value="Excel">
        Excel
    </button>

    <button class="btn btn-sm btn-pharus ml-4"
            id="btn-extract-pdf"
            type="button"
            value="PDF">
        PDF
    </button>
</div>

<div class="vertical mx-3"></div>