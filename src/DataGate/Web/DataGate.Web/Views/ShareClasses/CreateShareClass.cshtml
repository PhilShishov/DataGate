@model DataGate.Web.Models.BindingModels.ShareClasses.CreateShareClassBindingModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Create New ShareClass</h4>

<form asp-action="CreateShareClass"
      method="post"
      class="d-inline">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="d-inline"
         id="createForm">

        <div class="form-group">
            <label asp-for="InitialDate" class="text-torshia"></label><br>
            <input asp-for="InitialDate"
                   type="date"
                   min="2018-01-01"
                   class="form-control maxw-270">
            <span asp-validation-for="InitialDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="EndDate" class="text-torshia"></label><br>
            <input asp-for="EndDate"
                   type="date"
                   min="@DateTime.Today.ToString("yyyy-MM-dd")"
                   class="form-control maxw-270">
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ShareClassName" class="text-torshia"></label><br>
            <input type="text"
                   class="form-control maxw-270"
                   asp-for="ShareClassName"
                   id="formatName">
            <span asp-validation-for="ShareClassName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Status" class="text-torshia"></label><br>
            <select class="form-control maxw-270" asp-for="Status">
                <option selected disabled>-- Choose Status --</option>
                @foreach (var status in (List<string>)ViewData["Status"])
                {
                    <option value="@status">@status</option>
                }
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CurrencyCode" class="text-torshia"></label><br>
            <select class="form-control maxw-270" asp-for="CurrencyCode">
                <option selected disabled>-- Choose Currency--</option>
                @foreach (var currency in (List<string>)ViewData["CurrencyCode"])
                {
                    <option value="@currency">@currency</option>
                }
            </select>
            <span asp-validation-for="CurrencyCode" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LastNavDate" class="text-torshia"></label><br>
            <input asp-for="LastNavDate"
                   type="date"
                   class="form-control maxw-270">
            <span asp-validation-for="LastNavDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ExpiryDate" class="text-torshia"></label><br>
            <input asp-for="ExpiryDate"
                   type="date"
                   class="form-control maxw-270">
            <span asp-validation-for="ExpiryDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="InvestorType" class="text-torshia"></label><br>
            <select class="form-control maxw-270" asp-for="InvestorType">
                <option selected disabled>-- Choose Investor Type --</option>
                @foreach (var type in (List<string>)ViewData["InvestorType"])
                {
                    <option value="@type">@type</option>
                }
            </select>
            <span asp-validation-for="InvestorType" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ShareType" class="text-torshia"></label><br>
            <select class="form-control maxw-270" asp-for="CurrencyCode">
                <option selected disabled>-- Choose Share Type--</option>
                @foreach (var type in (List<string>)ViewData["ShareType"])
                {
                    <option value="@type">@type</option>
                }
            </select>
            <span asp-validation-for="ShareType" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CountryIssue" class="text-torshia"></label><br>
            <select class="form-control maxw-270" asp-for="CountryIssue">
                <option selected disabled>-- Choose Country Issue --</option>
                @foreach (var issue in (List<string>)ViewData["Country"])
                {
                    <option value="@issue">@issue</option>
                }
            </select>
            <span asp-validation-for="CountryIssue" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CountryRisk" class="text-torshia"></label><br>
            <select class="form-control maxw-270" asp-for="CountryRisk">
                <option selected disabled>-- Choose Country Risk --</option>
                @foreach (var risk in (List<string>)ViewData["Country"])
                {
                    <option value="@risk">@risk</option>
                }
            </select>
            <span asp-validation-for="CountryRisk" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="EmissionDate" class="text-torshia"></label><br>
            <input asp-for="EmissionDate"
                   type="date"
                   class="form-control maxw-270">
            <span asp-validation-for="EmissionDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="InceptionDate" class="text-torshia"></label><br>
            <input asp-for="InceptionDate"
                   type="date"
                   class="form-control maxw-270">
            <span asp-validation-for="InceptionDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LastNavDate" class="text-torshia"></label><br>
            <input asp-for="LastNavDate"
                   type="date"
                   class="form-control maxw-270">
            <span asp-validation-for="LastNavDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ExpiryDate" class="text-torshia"></label><br>
            <input asp-for="ExpiryDate"
                   type="date"
                   class="form-control maxw-270">
            <span asp-validation-for="ExpiryDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="InitialPrice" class="text-torshia"></label><br>
            <input type="text"
                   class="form-control maxw-270"
                   asp-for="InitialPrice">
            <span asp-validation-for="InitialPrice" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="AccountingCode" class="text-torshia"></label><br>
            <input type="text"
                   class="form-control maxw-270"
                   asp-for="AccountingCode">
            <span asp-validation-for="AccountingCode" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="IsHedged" class="text-torshia"></label><br>
            <select id="derivatives"
                    class="form-control maxw-270"
                    asp-for="IsHedged">
                <option value="No">No</option>
                <option value="Yes">Yes</option>
            </select>
            <span asp-validation-for="IsHedged" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="IsListed" class="text-torshia"></label><br>
            <select id="derivatives"
                    class="form-control maxw-270"
                    asp-for="IsListed">
                <option value="No">No</option>
                <option value="Yes">Yes</option>
            </select>
            <span asp-validation-for="IsListed" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BloombergMarket" class="text-torshia"></label><br>
            <input type="text"
                   class="form-control maxw-270"
                   asp-for="BloombergMarket">
            <span asp-validation-for="BloombergMarket" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BloombergCode" class="text-torshia"></label><br>
            <input type="text"
                   class="form-control maxw-270"
                   asp-for="BloombergCode">
            <span asp-validation-for="BloombergCode" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BloombergId" class="text-torshia"></label><br>
            <input type="text"
                   class="form-control maxw-270"
                   asp-for="BloombergId">
            <span asp-validation-for="BloombergId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ISINCode" class="text-torshia"></label><br>
            <input type="text"
                   class="form-control maxw-270"
                   asp-for="ISINCode">
            <span asp-validation-for="ISINCode" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ValorCode" class="text-torshia"></label><br>
            <input type="text"
                   class="form-control maxw-270"
                   asp-for="ValorCode">
            <span asp-validation-for="ValorCode" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="FACode" class="text-torshia"></label><br>
            <input type="text"
                   class="form-control maxw-270"
                   asp-for="FACode"
                   id="faCodeInput">
            <span asp-validation-for="FACode" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TACode" class="text-torshia"></label><br>
            <input type="text"
                   class="form-control maxw-270"
                   asp-for="TACode"
                   id="taCodeInput">
            <span asp-validation-for="TACode" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="WKN" class="text-torshia"></label><br>
            <input type="text"
                   class="form-control maxw-270"
                   asp-for="WKN">
            <span asp-validation-for="WKN" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DateBusinessYear" class="text-torshia"></label><br>
            <input asp-for="DateBusinessYear"
                   type="date"
                   class="form-control maxw-270">
            <span asp-validation-for="DateBusinessYear" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ProspectusCode" class="text-torshia"></label><br>
            <input type="text"
                   class="form-control maxw-270"
                   asp-for="ProspectusCode">
            <span asp-validation-for="ProspectusCode" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="SubFundContainer" class="text-torshia"></label><br>
            <select class="form-control maxw-270" asp-for="SubFundContainer">
                <option selected disabled>-- Choose Container --</option>
                @foreach (var container in (List<string>)ViewData["SubFundContainer"])
                {
                    <option value="@container">@container</option>
                }
            </select>
            <span asp-validation-for="SubFundContainer" class="text-danger"></span>
        </div>
    </div>

    <div class="button-holder mt-4">
        <button type="submit"
                class="btn btn-primary btn-sm mb-1"
                id="confirmCreateBtn"
                name="create_button"
                style="margin-right:40px">
            Create ShareClass
        </button>

        <a class="btn btn-primary btn-sm"
           asp-action="All">Back to List</a>
    </div>
</form>

@section Scripts{
    <script type="text/javascript" src="~/js/format/formatInput.js"></script>
    <script type="text/javascript" src="~/js/format/formatName.js"></script>
    <script type="text/javascript" src="~/js/confirm/confirmCreate.js"></script>

    <script>
        window.onload = () => {
            manageSideNavBar();
            manageDropdowns();
            formatInput();
            formatName();
            confirmCreate();
        }

        if (window.history.replaceState) {
            window.history.replaceState(null, null, window.location.href);
        }
    </script>
}