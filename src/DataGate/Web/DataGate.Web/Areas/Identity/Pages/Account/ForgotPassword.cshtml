@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = SharedLocalizer["Forgot your password?"];
}

<section class="fxt-template-layout2">
    <div class="container-fluid custom-container">
        <div class="row">
            <div class="col-xl-4 col-lg-6 col-12 fxt-bg-color">
                <div class="fxt-content">
                    <partial name="_LoginRedirectPartial" />

                    <h2 class="login-brand">
                        @SharedLocalizer["Forgotten Password"]
                    </h2>
                    <div class="fxt-form">
                        <form method="POST">
                            <div class="form-group col-md-12">
                                <div class="fxt-transformY-50 fxt-transition-delay-1">
                                    <input type="text"
                                           asp-for="Input.Email"
                                           autofocus
                                           class="form-control"
                                           placeholder="Enter your email.">
                                    <span asp-validation-for="Input.Email" class="text-danger d-flex justify-content-center"></span>
                                </div>
                            </div>
                            <div class="form-group col-md-6 col-lg-6 col-sm-12 col-xs-12">
                                <div class="fxt-transformY-50 fxt-transition-delay-4">
                                    <button type="submit"
                                            class="btn">
                                        @SharedLocalizer["Reset Password"]
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <partial name="_FooterMobile" />
                </div>
            </div>
            <div class="col-lg-2 col-md-2 d-none d-lg-block d-xl-block extra-space" style="background-color: #ffffff;"></div>
            <partial name="_LoginSideImagePartial" />
        </div>
        <partial name="_FooterPartial" />
    </div>
</section>