@using DataGate.Common
@model DataGate.Web.ViewModels.Entities.EntitiesViewModel

@{
    ViewData["Title"] = GlobalConstants.FundsControllerName;
    Layout = "~/Views/Shared/_Layout.cshtml";

    var controller = this.ViewContext.RouteData.Values["controller"].ToString();
    var route = string.Empty;

    if (controller == GlobalConstants.FundsControllerName)
    {
        route = GlobalConstants.FundAllUrl;
    }
}
<div class="justify-content-between">
    <div>
        <div class="mobile-none">
            <hr class="mt-0 mb-auto" />
            <div class="w-100" id="toolbar-pharus">
                <partial name="AllEntities/_Toolbar" />
                <div class="justify-content-center w-35">
                    <h2 class="text-center text-torshia" id="entityName">All Funds</h2>
                </div>
            </div>
            <hr class="mt-1 mb-0" />
        </div>

        @if (this.TempData[GlobalConstants.InfoKey] != null)
        {
            <div class="alert alert-success" id="infoMessage">
                @this.TempData[GlobalConstants.InfoKey]
            </div>
        }

        @if (this.TempData[GlobalConstants.ErrorKey] != null)
        {
            <div class="alert alert-danger" id="errorMessage">
                @this.TempData[GlobalConstants.ErrorKey]
            </div>
        }

        <partial name="AllEntities/_ViewTable" />
    </div>
</div>

@section Scripts{
    <script type="text/javascript" src="~/js/submitForm.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/js/buttonRedirect.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/js/inactive.js" asp-append-version="true"></script>
    @*<script type="text/javascript" src="~/js/jquery.blockUI.js" asp-append-version="true"></script>*@

    <script>
        // Fade timeout for tempdata messages
        setTimeout(() => {
            $('#infoMessage').fadeOut();
            $('#errorMessage').fadeOut();
        }, 3000);

        const SELECTORS = {
            TOKEN_UPDATE_FORM: '#update-form input[name=__RequestVerificationToken]',
            TOKEN_EXTRACT: '#extract-form input[name=__RequestVerificationToken]',
            EXTRACT_EXCEL_BUTTON: 'btn-extract-excel',
            EXTRACT_PDF_BUTTON: 'btn-extract-pdf',
            jQ_EXTRACT_EXCEL_BUTTON: '#btn-extract-excel',
            jQ_EXTRACT_PDF_BUTTON: '#btn-extract-pdf',
            TABLE_EXTRACT: 'table-entities',
        };

        const excelValue = document.getElementById(SELECTORS.EXTRACT_EXCEL_BUTTON).getAttribute('value');
        const pdfValue = document.getElementById(SELECTORS.EXTRACT_PDF_BUTTON).getAttribute('value');
        const table = document.getElementById(SELECTORS.TABLE_EXTRACT);

        let tableValues = [];

        for (let row of table.rows) {
            let tableRows = [];
            for (let cell of row.cells) {
                tableRows.push(cell.innerText);
            }
            tableValues.push(tableRows);
        }

        let model = {
                TableValues: tableValues,
                Date: '@Model.Date',
                ControllerName: '@controller',
        };

        $(document).ready(function () {

            $(document).on('click', SELECTORS.jQ_EXTRACT_EXCEL_BUTTON, function (event) {
                event.preventDefault()
                model.Command = excelValue;
                const tokenExtract = $(SELECTORS.TOKEN_EXTRACT).val();

            //$.blockUI({ message: '<h3>Please wait a moment...</h3>' });
                $.ajax({
                    url: '/Media/GenerateReport',
                    type: 'POST',
                    data: model,
                    headers: { 'X-CSRF-TOKEN': tokenExtract },
                }).done(function (data) {
                     //$.unblockUI();
                    if (data.fileName != '') {
                        const url = '/Media/Download?fileName=' + data.fileName;
                        window.location = url;
                    }
                }).fail(function (request, status, error) {
                    alert(request.responseText);
                });
            });

            $(document).on('click', SELECTORS.jQ_EXTRACT_PDF_BUTTON, function (event) {
                event.preventDefault()
                model.Command = pdfValue;
                const tokenExtract = $(SELECTORS.TOKEN_EXTRACT).val();

                //$.blockUI({ message: '<h3>Please wait a moment...</h3>' });
                $.ajax({
                    url: '/Media/GenerateReport',
                    type: 'POST',
                    data: model,
                    headers: { 'X-CSRF-TOKEN': tokenExtract },
                }).done(function (data) {

                    if (!data.success) {
                        alert(data.errorMessage)
                    }
                    //$.unblockUI();
                    if (data.fileName != '') {
                        const url = '/Media/Download?fileName=' + data.fileName;
                        window.location = url;
                    }
                }).fail(function (request, status, error) {
                    alert(request.responseText);
                });
            });


            // ________________________________________________________
            //
            // Autocomplete search
            const controller = '@controller';
            const tokenUpdate = $(SELECTORS.TOKEN_UPDATE_FORM).val();
            loadAutocomplete(tokenUpdate, controller, entityId = null);

            // ________________________________________________________
            //
            // Modal multiselect for column selection
            $('.multiselect').multiselect();

            // ________________________________________________________
            //
            // Double top scroll for wide table
            $('.double-scroll').doubleScroll();
            $('#tableDoubleScroll').doubleScroll({ resetOnWindowResize: true });

            // ________________________________________________________
            //
            // Additional information about headers
            $(function () {
                $('[data-toggle="tooltip"]').tooltip({
                    html: true
                })
            })
        });
    </script>
}