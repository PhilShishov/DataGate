@using DataGate.Common
@model DataGate.Web.ViewModels.Entities.EntitiesViewModel

@{
    ViewData["Title"] = GlobalConstants.FundsControllerName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="justify-content-between">
    <form asp-controller="Funds"
          asp-action="All"
          method="post"
          id="update-form">
        <div>
            <div class="mobile-none">
                <hr class="mt-0 mb-auto" />
                <div class="w-100" id="toolbar-pharus">
                    <partial name="AllEntities/_Toolbar" />
                    <div class="justify-content-center w-35">
                        <h2 class="text-center text-torshia" id="entityName">All Funds</h2>
                    </div>
                </div>
                <hr class="mt-1 mb-0" />
            </div>

            @if (this.TempData[GlobalConstants.InfoKey] != null)
            {
                <div class="alert alert-success" id="infoMessage">
                    @this.TempData[GlobalConstants.InfoKey]
                </div>
            }

            @if (this.TempData[GlobalConstants.ErrorKey] != null)
            {
                <div class="alert alert-danger" id="errorMessage">
                    @this.TempData[GlobalConstants.ErrorKey]
                </div>
            }

            <partial name="AllEntities/_ModalSelect" />
            <partial name="AllEntities/_ViewTable" />
        </div>
    </form>
</div>

<!-- Modal placeholder for excel/pdf extraction-->
<div id="modal-placeholder-extract"></div>

@section Scripts{
    <script type="text/javascript" src="~/js/submitForm.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/js/buttonRedirect.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/js/setTableValues.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/js/inactive.js" asp-append-version="true"></script>

    <script>
        // Fade timeout for tempdata messages
        setTimeout(() => {
            $('#infoMessage').fadeOut();
            $('#errorMessage').fadeOut();
        }, 3000);

        @*const json = {
            areaName: '@GlobalConstants.FundAreaName',
            routeName: '@GlobalConstants.FundDetailsRouteName',
            id: @Model.Id,
            date: '@Model.Date',
            startConnection : '@Model.StartConnection',
            endConnection : '@Model.EndConnection',
        };*@

        const placeholderElement = $('#modal-placeholder-extract');
        //const token = $('input[name=__RequestVerificationToken]', form).val();

        $(document).on('click', '#btn-modal-extract', function (event) {
            $.get({
                url: '/loadFundExtract',
                //data: json,
                contentType: 'application/json; charset=utf-8',
                //headers: { 'X-CSRF-TOKEN': token },
            }).done(function (data) {
                placeholderElement.html(data);
                placeholderElement.find('.modal').modal('show');
            });
        });

        $(document).ready(() => {
            var token = $('#update-form input[name=__RequestVerificationToken]').val();
            // ________________________________________________________
            //
            // Autocomplete search
            const controller = '@GlobalConstants.FundsControllerName';
            loadAutocomplete(token, controller, entityId = null);

            // ________________________________________________________
            //
            // Modal multiselect for column selection
            $('.multiselect').multiselect();

            // ________________________________________________________
            //
            // Double top scroll for wide table
            $('.double-scroll').doubleScroll();
            $('#tableDoubleScroll').doubleScroll({ resetOnWindowResize: true });

            // ________________________________________________________
            //
            // Additional information about headers
            $(function () {
                $('[data-toggle="tooltip"]').tooltip({
                    html: true
                })
            })
        });
    </script>
}