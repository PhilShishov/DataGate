@model EditUserInputModel

@{
    ViewData["Title"] = SharedLocalizer.GetHtmlString("Edit User");
}
<div class="push">
    <div class="d-flex justify-content-center text-center">
        <form method="post" class="d-inline w-75">
            <h2>@SharedLocalizer.GetHtmlString("Edit User")</h2>
            <div>
                <a class="btn btn-pharus text-white mt-2"
                   asp-area=""
                   asp-controller="User"
                   asp-action="Index">
                    @SharedLocalizer.GetHtmlString("Back to Panel")
                </a>
            </div>
            <hr />
            <div class="form-group-user">
                <input asp-for="Username" class="form-control"
                       autocomplete="off"
                       placeholder="Username..." />
                <div class="d-flex justify-content-center">
                    <span></span>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group-user">
                <input asp-for="Email" class="form-control"
                       placeholder="Email..." />
                <div class="d-flex justify-content-center">
                    <span></span>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group-user">
                <input asp-for="RoleType" class="form-control"
                       placeholder="Role type..." />
                <div class="d-flex justify-content-center">
                    <span></span>
                    <span asp-validation-for="RoleType" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group-user">
                <input asp-for="PasswordHash"
                       class="form-control"
                       autocomplete="new-password"
                       placeholder="@SharedLocalizer.GetHtmlString("New password")..." />
                <div class="d-flex justify-content-center">
                    <span></span>
                    <span asp-validation-for="PasswordHash" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group-user">
                <input asp-for="ConfirmPassword"
                       class="form-control"
                       autocomplete="new-password"
                       placeholder="@SharedLocalizer.GetHtmlString("Confirm password")..." />
                <div class="d-flex justify-content-center">
                    <span></span>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="button-holder">
                <input type="hidden" id="RecaptchaValue" asp-for="RecaptchaValue" />
                <button type="submit"
                        asp-page-handler="EditUser"
                        class="btn btn-pharus text-white btn-confirm-update"
                        style="margin-right:40px">
                    @SharedLocalizer.GetHtmlString("Save changes")
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="Scripts/_CreateEditScriptsPartial">
}
