@page
@model ForgotPasswordModel

@{
    ViewData["Title"] = "Forgot Password";
}

<h1 class="text-center text-torshia">Forgotten Password</h1>
<hr class="bg-pharus w-50 hr-2" />
<form class="mx-auto w-50 d-inline" method="post">
    <div class="form-group row d-flex justify-content-center">
        <label asp-for="Input.Email" class="text-torshia m-1 pr-3">Email:  </label>
        <input type="text"
               class="form-control w-50 m-0 maxw-270"
               id="email"
               asp-for="Input.Email"
               autofocus>
        <span asp-validation-for="Input.Email" class="m-1 text-danger"></span>
    </div>

    <div class="button-holder d-flex justify-content-center">
        <button type="submit" class="btn bg-pharus text-white">NEXT</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}