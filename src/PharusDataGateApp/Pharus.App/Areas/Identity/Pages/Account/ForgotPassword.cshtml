@page
@model ForgotPasswordModel

@{
    ViewData["Title"] = "Forgot Password";
}

<h1 class="text-center text-torshia">Forgotten Password</h1>
<hr class="bg-pharus w-50 hr-2" />
<form class="mx-auto w-50" method="post">
    <div class="form-group">
        <label asp-for="Input.Email" class="text-torshia">Email: </label><br>
        <input type="text"
               class="form-control-pharus"
               id="email"
               placeholder="Email..."
               asp-for="Input.Email">
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

     <div class="button-holder d-flex justify-content-center">
        <button type="submit" class="btn bg-pharus text-white">NEXT</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}