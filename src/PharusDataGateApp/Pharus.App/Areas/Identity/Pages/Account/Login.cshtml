@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<form class="mx-auto w-50 d-inline" method="post">
    <div>
        <div id="background-pharus">
            <img src="~/images/Background_Login.png" width="1680" height="907">
        </div>

        <div class="d-flex justify-content-center">
            <a id="logo-login-pharus" href="/Home/Index">
                <img src="~/images/Logo_Pharus.jpg" width="60">
            </a>
        </div>

        <div class="d-flex">
            <text id="login-text-pharus"
                  class="bold-text-pharus">
                Pharus DataGate User <br />
                <span class="text-color-blue-pharus">Login</span>
            </text>
        </div>

        <div id="login-form">
            <div class="form-group">
                <input type="text"
                       class="form-control w-470"
                       id="username"
                       placeholder="Username..."
                       asp-for="Input.Username"
                       autofocus
                       autocomplete="username">
                <span asp-validation-for="Input.Username" class="text-danger d-flex justify-content-center"></span>
            </div>

            <div class="form-group">
                <input type="password"
                       class="form-control w-470"
                       id="password"
                       placeholder="Password..."
                       asp-for="Input.Password"
                       autocomplete="new-password">
                <span asp-validation-for="Input.Password" class="text-danger d-flex justify-content-center"></span>
                <!-- TODO show/hide password -->
                <!-- <input type="checkbox" class="form-control-login-pharus" onclick="document.getElementById('password').type = this.checked ? 'text' : 'password'">Show password -->
            </div>
            <div class="form-group">
                <div>
                    <label class="checkbox-pharus text-color-grey-pharus" asp-for="Input.RememberMe">
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                        <input type="checkbox" asp-for="Input.RememberMe" />
                        <span class="checkmark mt-1"></span>
                    </label>
                    <a class="text-color-blue-pharus text-underline float-right"
                       href="/Identity/Account/ForgotPassword">
                        Forgot Password?
                    </a>
                </div>
            </div>

            <div class="login-div">
                <button type="submit" id="btn-login" href="/Identity/Account/Login">
                    <img src="~/images/Login_Button.png">
                </button>
            </div>
        </div>

        <div>
            <text id="footer-login-pharus"
                  class="text-footer-pharus text-color-grey-pharus">
                © Pharus Management Lux SA 16, Avenue de la Gare L- 1610 Luxembourg T. +352 28 55 69 - 1
            </text>
        </div>
    </div>
</form>