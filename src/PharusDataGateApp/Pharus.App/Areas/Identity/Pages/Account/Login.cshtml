@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<h1 class="text-center text-torshia">Pharus DataGate <br>User Log In</h1>
<hr class="bg-pharus w-50 hr-2" />
<form class="mx-auto w-50" method="post">
    <div class="d-inline justify-content-center">
        <div class="form-group">
            <input type="text"
                   class="form-control w-40 m-auto text-center"
                   id="username"
                   placeholder="Username..."
                   asp-for="Input.Username"
                   autofocus>
            <span asp-validation-for="Input.Username" class="text-danger d-flex justify-content-center"></span>
        </div>
        <div class="form-group">
            <input type="password"
                   class="form-control w-40 m-auto text-center"
                   id="password"
                   placeholder="Password..."
                   asp-for="Input.Password">
            <span asp-validation-for="Input.Password" class="text-danger d-flex justify-content-center"></span>
            <!-- TODO show/hide password -->
            <!-- <input type="checkbox" class="form-control-login-pharus" onclick="document.getElementById('password').type = this.checked ? 'text' : 'password'">Show password -->
        </div>
        <hr class="bg-pharus w-50 hr-2" />
        <div class="form-group">
            <div class="checkbox d-flex justify-content-center">
                <label asp-for="Input.RememberMe">
                    <input asp-for="Input.RememberMe"/>
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>           
        </div>
        <div class="button-holder d-flex justify-content-center">
            <button type="submit" class="btn btn-primary bg-pharus text-white" id="btnLogin">LOGIN</button>
        </div>
    </div>
    <div class="form-group">
        <a href="/Identity/Account/ForgotPassword">Forgot your password?</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}