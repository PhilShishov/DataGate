                        <div class="fxt-form">
                            <form method="POST">
                                <div class="form-group col-md-12">
                                    <label>Username</label>
                                    <div class="fxt-transformY-50 fxt-transition-delay-1">
                                        <input type="text" asp-for="Input.Username"
                                               autofocus
                                               autocomplete="username" class="form-control" id="username" placeholder="Username" required="required">
                                        <span asp-validation-for="Input.Username" class="text-danger d-flex justify-content-center"></span>
                                    </div>
                                </div>
                                <div class="form-group col-md-12">
                                    <label>Password</label>
                                    <div class="fxt-transformY-50 fxt-transition-delay-2">
                                        <input type="password" asp-for="Input.Password"
                                               autocomplete="new-password" class="form-control" id="password" placeholder="Password" required="required">
                                        <span asp-validation-for="Input.Password" class="text-danger d-flex justify-content-center"></span>
                                    </div>
                                </div>
                                <div class="form-group col-md-12">
                                    <div class="fxt-transformY-50 fxt-transition-delay-3">
                                        <div class="fxt-checkbox-area">
                                            <div class="checkbox">
                                                <input id="checkbox1" type="checkbox" asp-for="Input.RememberMe">
                                                <label for="checkbox1" asp-for="Input.RememberMe">Remember me?</label>
                                            </div>
                                            <a href="/Identity/Account/ForgotPassword" class="switcher-text">Forgot Password</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-md-6 col-lg-6 col-sm-12 col-xs-12">
                                    <div class="fxt-transformY-50 fxt-transition-delay-4">
                                        <button type="submit" class="fxt-btn-fill" href="/Identity/Account/Login">Log in</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                        @*<div class="fxt-footer">
                            <div class="fxt-transformY-50 fxt-transition-delay-5">
