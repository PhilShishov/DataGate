@page
@model CreateUserModel
@{
    ViewData["Title"] = "Create User";
}
 
<h1 class="text-center text-torshia">Create User</h1>
<hr class="bg-pharus w-50 hr-2" />
<form class="mx-auto w-50" method="post">
    <div class="form-group">
        <label asp-for="Input.Username" class="text-torshia">Username</label><br>
        <input type="text"
               class="form-control-pharus"
               id="username"
               placeholder="Username..."
               asp-for="Input.Username"
               autofocus>
        <span asp-validation-for="Input.Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Password" class="text-torshia">Password</label><br>
        <input type="password"
               class="form-control-pharus"
               id="password"
               placeholder="Password..."
               asp-for="Input.Password">
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.ConfirmPassword" class="text-torshia">Confirm Password</label><br>
        <input type="password"
               class="form-control-pharus"
               id="confirmPassword"
               placeholder="Confirm Password..."
               asp-for="Input.ConfirmPassword">
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Email" class="text-torshia">Email</label><br>
        <input type="email"
               class="form-control-pharus"
               id="email"
               placeholder="Email..."
               asp-for="Input.Email">
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
		<label asp-for="Input.SelectedRole" class="text-torshia"></label><br>
        <select asp-for="Input.SelectedRole"
				asp-items="Model.Roles"
                class="form-control-pharus">
				<option value="">Select role</option>
		</select>
        <span asp-validation-for="Input.SelectedRole" class="text-danger"></span>
    </div>
    <div class="button-holder d-flex justify-content-center">
        <button type="submit" class="btn bg-pharus text-white" id="btnCreateUser">CREATE</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}