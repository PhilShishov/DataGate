@model Pharus.App.Models.ViewModels.Entities.SpecificEntityViewModel

<div class="modal"
     id="columnModal"
     role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-body">
                <div>
                    <h2 class="text-center">SELECT COLUMNS </h2>

                    @for (int row = 0; row < 1; row++)
                    {
                        <select asp-for="PreSelectedColumns" style="width:60%" hidden>
                            @for (int col = 0; col < 4; col++)
                            {
                                <option selected value="@Model.SubEntitiesHeadersForColumnSelection[row][col]">
                                    @Model.SubEntitiesHeadersForColumnSelection[row][col]
                                </option>
                            }
                        </select>
                    }

                    @for (int row = 0; row < 1; row++)
                    {
                        <select class="multiselect" multiple="multiple" asp-for="SelectedColumns" style="width:60%">
                            @for (int col = 4; col < Model.SubEntitiesHeadersForColumnSelection[row].Length; col++)
                            {
                                <option value="@Model.SubEntitiesHeadersForColumnSelection[row][col]">
                                    @Model.SubEntitiesHeadersForColumnSelection[row][col]
                                </option>
                            }
                        </select>
                    }
                    <br />
                </div>
            </div>
            <div class="modal-footer">
                <input type="submit"
                       asp-for="Command"
                       value="Apply"
                       class="btn btn-primary btn-sm ml-2" />
                <button type="button"
                        class="btn btn-default"
                        data-dismiss="modal">
                    Close
                </button>
            </div>
        </div>
    </div>
</div>