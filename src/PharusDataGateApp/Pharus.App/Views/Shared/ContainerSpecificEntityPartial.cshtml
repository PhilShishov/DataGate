@model Pharus.App.Models.ViewModels.Entities.SpecificEntityViewModel

<form asp-controller="Funds" asp-action="ViewFundSF" class="justify-content-between" method="post">
    <div class="w-100 flex-wrap my-5">
        <label for="date"
               class="text-torshia m-1 pr-3">SELECT DATE:</label>
        <input type="date"
               id="fundDatetime"
               asp-for="ChosenDate"
               min="2018-01-01" max=@DateTime.Today.ToString("yyyy-MM-dd")>

        <input type="submit"
               class="bg-pharus text-white"
               asp-for="Command"
               value="Update Table"></>
    </div>

    <div class="d-flex justify-content-between">
        <div class="table-responsive border-0 w-35">
            <table class="table table-hover">
                <tbody>
                    @for (int row = 1; row < Model.ActiveEntity.Count; row++)
                    {
                        @for (int col = 0; col < Model.ActiveEntity[row].Length; col++)
                        {
                            <tr>
                                <th class="text-secondary p-1">
                                    <h5>
                                        @Model.ActiveEntity[0][col]
                                    </h5>
                                </th>
                                <td class="p-1">
                                    @Model.ActiveEntity[row][col]
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        <div class="w-35 float-right">
            <p>List of prospectus</p>
            <a href="#bottomOfPage">Document prospectus</a>
            <p>List of agreements</p>
            <a href="#bottomOfPage">Document manco offer</a>

            @if (this.User.IsInRole("Admin"))
            {
                <div class="mt-5">
                    <a href="/Funds/EditFund/@Model.EntityId" class="btn bg-pharus text-white">Edit Fund</a>
                </div>
            }
        </div>
    </div>
</form>

<form asp-controller="Funds" asp-action="ViewFundSF" class="pharusSearchForm my-5">
    <div>
        <input type="text"
               name="searchString"
               asp-for="SearchString" />

        <input type="submit"
               class="bg-pharus text-white"
               asp-for="Command"
               value="Filter" />
    </div>
</form>