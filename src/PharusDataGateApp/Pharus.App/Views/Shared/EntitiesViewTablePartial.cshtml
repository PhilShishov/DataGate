@{
    var controllerName = this.ViewContext.RouteData.Values["controller"].ToString();
}

<div class="table-responsive border-0 mx-auto" id="tableDoubleScroll">
    <table class="table table-hover text-nowrap" name="ActiveEntities">
        <thead>
            <tr>
                @for (int row = 0; row < 1; row++)
                {
                    @for (int col = 0; col < Model.ActiveEntities[row].Length; col++)
                    {
                        <th class="text-dark pr-3 bg-info">
                            <h5>
                                @Model.ActiveEntities[row][col]
                            </h5>
                        </th>
                    }
                }
            </tr>
        </thead>
        <tbody>
            @for (int row = 1; row < Model.ActiveEntities.Count; row++)
            {
                <tr class="tableRowPharus" onclick="document.location = '/@controllerName/ViewEntitySE/@Model.ActiveEntities[row][2]'">
                    @for (int col = 0; col < Model.ActiveEntities[row].Length; col++)
                    {
                        <td class="p-1">
                            @Model.ActiveEntities[row][col]
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>