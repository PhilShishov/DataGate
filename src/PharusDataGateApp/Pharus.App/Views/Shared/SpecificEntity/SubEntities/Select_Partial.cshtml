@model Pharus.App.Models.ViewModels.Entities.SpecificEntityViewModel

<div class="w-30">
    <div class="d-flex h-80">
        <div>
            <select asp-for="SelectTerm"
                    id="SelectTerm"
                    class="form-control input-sm"
                    onchange="this.form.submit()">
                <option value=@Model.SelectTerm selected>@Model.SelectTerm</option>
            </select>
        </div>

        <div>
            <button type="button"
                    class="btn btn-sm ml-2 btn-modal-pharus"
                    data-toggle="modal"
                    data-target="#columnModal"
                    name="showColumnSelection">
                <img src="~/images/ColumnSelection_Pharus.jpg"
                     width="35"
                     height="35" />
                <span class="d-block">Choose</span>
                <span>Columns</span>
            </button>
        </div>

        <div class="mr-2">
            <input type="submit"
                   asp-for="Command"
                   value="Reset"
                   class="btn btn-primary btn-sm"/>
        </div>
    </div>

    <div class="text-center">
        <label class="lbl-toolbar-pharus">Select</label>
    </div>
</div>

<div class="vertical mx-3"></div>