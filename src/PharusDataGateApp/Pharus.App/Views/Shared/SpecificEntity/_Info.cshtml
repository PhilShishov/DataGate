<div class="table-responsive border-0" id="table-info-pharus">
    <table class="table table-hover">
        <tbody>
            @for (int row = 1; row < Model.Entity.Count; row++)
            {
                @for (int col = 0; col < Model.Entity[row].Length; col++)
                {
                    <tr>
                        <th class="text-secondary p-1">
                            @Model.Entity[0][col]
                        </th>
                        <td class="p-1">
                            @Model.Entity[row][col]
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>