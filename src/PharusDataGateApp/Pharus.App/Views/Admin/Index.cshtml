
@{
    ViewData["Title"] = "Welcome to ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (!this.User.Identity.IsAuthenticated)
{
    <div class="jumbotron mt-3 bg-pharus">
            <h1 class="text-white">Welcome to Pharus Management DataGate Platform</h1>
            <hr class="bg-white hr-2" />
            <h3 class="text-white"><a href="/Identity/Account/Login">Login to Pharus DataGate</a> </h3>
    </div>    
}
else
{
    <h1 class="text-center">Hello, Administrator @this.User.Identity.Name!</h1>       
    
    <hr class="hr-2 bg-pharus">
    <div class="d-flex justify-content-between">    
        <div class="w-25 bg-white">
            <h2 class="text-center">Create User</h2>
            <div class="border-pharus p-3">
               
                    <div class="p-2 d-flex justify-content-around">
                        <h4 class="w-75">Description</h4>
                        <a href="/Identity/Account/Register" class="btn bg-pharus text-white w-25">Details</a>
                    </div>
                
            </div>
        </div>
        <div class="w-25 bg-white">
            <h2 class="text-center">Shipped</h2>
            <div class="border-pharus p-3">
               
                    <div class="p-2 d-flex justify-content-around">
                        <h4 class="w-75">Description</h4>
                        <a href="" class="btn bg-pharus text-white w-25">Details</a>
                    </div>
                
            </div>
        </div>
        <div class="w-25 bg-white">
            <h2 class="text-center">Delivered</h2>
            <div class="border-pharus p-3">
                
                    <div class="p-2 d-flex justify-content-around">
                        <h4 class="w-75">Description</h4>
                        <a href="" class="btn bg-pharus text-white w-25">Acquire</a>
                    </div>
                
            </div>
        </div>
    </div>     
}