@using Pharus.Domain
@model Pharus.App.ViewModels.Users.UserCreateBindingModel
@{
    ViewData["Title"] = "Create User";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
 
<h1 class="text-center text-torshia">Create User</h1>
<hr class="bg-pharus w-50 hr-2" />
<form class="mx-auto w-50" method="post">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label for="Username" class="text-torshia">Username</label><br>
        <input type="text"
               class="form-control-pharus"
               id="username"
               placeholder="Username..."
               asp-for="Username">
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Password" class="text-torshia">Password</label><br>
        <input type="password"
               class="form-control-pharus"
               id="password"
               placeholder="Password..."
               asp-for="Password">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="ConfirmPassword" class="text-torshia">Confirm Password</label><br>
        <input type="password"
               class="form-control-pharus"
               id="confirmPassword"
               placeholder="Confirm Password..."
               asp-for="ConfirmPassword">
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Email" class="text-torshia">Email</label><br>
        <input type="email"
               class="form-control-pharus"
               id="email"
               placeholder="Email..."
               asp-for="Email">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
		<label for="RoleType" class="text-torshia"></label><br>
        <select class="custome-select" id="roletype" asp-for="RoleType">
            <option selected disabled>-- Choose Role --</option>
            @foreach (var role in (List<PharusUserRole>) ViewData["Roles"])
            {
                <option value="@role">@role</option>
            }
        </select>
        <span asp-validation-for="RoleType" class="text-danger"></span>
    </div>
    <div class="button-holder d-flex justify-content-center">
        <button type="submit" class="btn bg-pharus text-white">Create</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}