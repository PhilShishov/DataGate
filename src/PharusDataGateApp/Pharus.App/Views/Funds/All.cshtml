@model Pharus.App.Models.ViewModels.Entities.EntitiesViewModel

@{
    ViewData["Title"] = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var controllerName = this.ViewContext.RouteData.Values["controller"].ToString();
}

<h2 class="text-center text-torshia">All Active Funds</h2>

@section Styles{
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
}

<form asp-controller="Funds" class="justify-content-between" method="post">
    <div>
        <partial name="ContainerEntityPartial" />

        <partial name="ExtractEntitiesViewPartial" />

        <hr class="bg-pharus hr-2" />

        <partial name="EntitiesBindingTablePartial" />

        <div class="table-responsive border-0 mx-auto" id="tableDoubleScroll">
            <table class="table table-hover text-nowrap" name="Entities">
                <thead>
                    <tr>
                        @for (int row = 0; row < 1; row++)
                        {
                            @for (int col = 0; col < Model.Entities[row].Length; col++)
                            {
                                <th class="text-dark pr-3 bg-info">
                                    <h5>
                                        @Model.Entities[row][col]
                                    </h5>
                                </th>
                            }
                        }
                    </tr>
                </thead>
                <tbody>
                    @for (int row = 1; row < Model.Entities.Count; row++)
                    {
                        <tr class="tableRowPharus" onclick="document.location = '/@controllerName/ViewEntitySE/@Model.Entities[row][2]/@Model.ChosenDate'">
                            @for (int col = 0; col < Model.Entities[row].Length; col++)
                            {
                                <td class="p-1">
                                    @Model.Entities[row][col]
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @*<partial name="EntitiesViewTablePartial" />*@
    </div>
</form>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#SearchTerm").select2({
                placeholder: "Select Funds",
                theme: "classic",
                ajax: {
                    url: "/Funds/AutoCompleteFundList",
                    dataType: "json",
                    delay: 250,
                    data: function (params) {
                        return { searchTerm: params.term };
                    },
                    processResults: function (data) {
                        return { results: data }
                    }
                }
            });
        });
    </script>

    <script type="text/javascript" src="~/js/jquery.doubleScroll.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('.double-scroll').doubleScroll();
            $('#tableDoubleScroll').doubleScroll({ resetOnWindowResize: true });
        });
    </script>
}