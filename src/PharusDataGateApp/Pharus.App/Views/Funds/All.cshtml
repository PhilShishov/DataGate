@model List<string[]>

@{
    ViewData["Title"] = "All";
}
<h2 class="text-center text-torshia">All Active Funds</h2>

<form asp-action="All" class="d-inline" method="post">
    <div>
        <label for="date"
               class="text-torshia">SELECT DATE:</label>
        <input type="date"
               name="chosenDate"
               id="fundDatetime"
               value="@DateTime.Today.ToString("yyyy-MM-dd")">

        <input type="submit"
               name="command"
               class="bg-pharus text-white"
               value="Update Table"></>

        <input type="submit"
               name="command"
               class="bg-pharus text-white center-block"
               value="Extract Table As Excel" />

        <input type="submit"
               name="command"
               class="bg-pharus text-white center-block"
               value="Extract Table As PDF" />

        <div class="pharusSearchDiv position-absolute">
            <input type="text" name="searchString" />

            <input type="submit"
                   name="command"
                   class="bg-pharus text-white center-block"
                   value="Filter" />
        </div>

        <hr class="bg-pharus hr-2" />

        <div class="table-responsive border-0 mx-auto">
            <table class="table table-hover" id="tableFunds" name="funds">
                <thead>
                    @for (int row = 0; row < 1; row++)
                    {
                        <tr>
                            @for (int col = 0; col < Model[row].Length; col++)
                            {
                                <th class="text-secondary">
                                    <h5>
                                        @*@Html.HiddenFor(m => m[row][col])*@
                                        @Html.TextBoxFor(m => Model[row][col])

                                    </h5>
                                </th>
                            }
                        </tr>
                    }
                </thead>
                <tbody>
                    @for (int row = 1; row < Model.Count; row++)
                    {
                        <tr>
                            @for (int col = 0; col < Model[row].Length; col++)
                            {
                                <td>
                                    @*@Html.HiddenFor(m => m[row][col])*@
                                    @Html.TextBoxFor(m => Model[row][col])
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</form>