@model Pharus.App.Models.BindingModels.Funds.EditFundBindingModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Edit Fund @Model.EntityProperties[1][3]</h4>

<form asp-action="EditFund" method="post" class="d-inline">
    <div class="d-inline">
        @for (int row = 1; row < Model.EntityProperties.Count; row++)
        {
            @for (int col = 0; col < Model.EntityProperties[row].Length; col++)
            {
                <div>
                    <label class="control-label text-secondary">
                        @Model.EntityProperties[0][col]
                    </label>

                    @if (Model.EntityProperties[0][col] == "STATUS")
                    {
                        <select asp-items="@Model.FStatus" class="form-control maxw-270"></select>
                    }

                    else if (Model.EntityProperties[0][col] == "LEGAL FORM")
                    {
                        <select asp-items="@Model.LegalForm" class="form-control maxw-270"></select>
                    }

                    else if (Model.EntityProperties[0][col] == "LEGAL VEHICLE")
                    {
                        <select asp-items="@Model.LegalVehicle" class="form-control maxw-270"></select>
                    }

                    else if (Model.EntityProperties[0][col] == "LEGAL TYPE")
                    {
                        <select asp-items="@Model.LegalType" class="form-control maxw-270"></select>
                    }

                    else if (Model.EntityProperties[0][col] == "COMPANY DESCRIPTION")
                    {
                        <select asp-items="@Model.CompanyTypeDesc" class="form-control maxw-270"></select>
                    }
                    else if (Model.EntityProperties[0][col] == "COMPANY TYPE")
                    {
                        <select asp-items="@Model.CompanyAcronym" class="form-control maxw-270"></select>
                    }
                    else
                    {
                        <input type="text"
                               class="form-control maxw-270"
                               asp-for="@Model.EntityProperties[row][col]" />
                    }
                </div>
            }
        }
    </div>

    <div class="button-holder mt-4">
        <button type="submit"
                class="btn bg-pharus text-white"
                name="update_button"
                style="margin-right:40px"
                onclick="return confirm('Are you sure you want to update this?')">
            Update Fund
        </button>
    </div>
</form>

<div>
    <a asp-action="All">Back to List</a>
</div>