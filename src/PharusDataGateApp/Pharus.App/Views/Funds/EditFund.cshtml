@model List<string[]>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Edit Fund @Model[1][1]</h4>

<form asp-action="EditFund" method="post" class="d-inline">
    <div class="d-inline">
        @for (int row = 1; row < Model.Count; row++)
        {
            @for (int col = 0; col < Model[row].Length; col++)
            {
                <div class="">
                    <label class="control-label text-secondary">
                        @*@Html.TextBoxFor(m => Model[0][col], new { @class = "", @style = "border:0" })*@
                        @Model[0][col]
                    </label>
                    @if (Model[0][col] == "STATUS")
                    {
                        <select class="form-control maxw-270">
                            @foreach (var status in ViewBag.Status)
                            {
                                <option value="@status.Value">@status.Text</option>
                            }
                        </select>
                        @*@Html.DropDownList("Active", (ViewBag.Status as SelectList), new { @style = "form-control" })*@
                    }
                    else
                    {
                        <input type="text"
                               class="form-control maxw-270"
                               asp-for="@Model[row][col]" />
                        @*@Html.TextBoxFor(m => Model[row][col], new { @class = "form-control" })*@
                    }
                </div>
            }
        }
    </div>

    <div class="button-holder">
        <button type="submit"
                class="btn bg-pharus text-white"
                name="modify_button"
                onclick="return confirm('Are you sure you want to modify this?')">
            Modify Fund
        </button>
        <button type="submit"
                class="btn bg-pharus text-white"
                name="update_button"
                style="margin-right:40px"
                onclick="return confirm('Are you sure you want to update this?')">
            Update Fund
        </button>
    </div>
</form>

<div>
    <a asp-action="All">Back to List</a>
</div>