@model Pharus.App.Models.ViewModels.Entities.SpecificEntityViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var controllerName = this.ViewContext.RouteData.Values["controller"].ToString();
}

@section Styles{
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
    <style>
        body {
            background-image: none;
        }
    </style>
}

<form asp-controller="Funds" class="justify-content-between" method="post">

    <partial name="SpecificEntityUpdatePartial" />

    <div class="d-flex justify-content-between">

        <partial name="SpecificEntityInfoPartial" />
        <div class="w-50 float-right">
            <partial name="SpecificEntityDocumentsPartial" />
            @if (this.User.IsInRole("Admin"))
            {
                <div class="mt-5">
                    <a href="/Funds/EditFund/@Model.EntityId" class="btn btn-primary btn-sm mb-2">Edit Fund</a>
                </div>
            }
        </div>
    </div>

    <hr class="bg-pharus hr-2" />

    <partial name="SpecificEntitySearchPartial" />
    <partial name="ExtractSubEntitiesViewPartial" />
    <partial name="EntitySubEntitiesBindingTablePartial" />

    <div class="row w-25 ml-3 mb-5">
        <label class="text-torshia m-1 pr-3">FUND ADDITIONAL INFORMATION</label>
        <select class="custom-select-lg pharus-select form-control input-sm"
                id="fundChoicesSelect"
                name="fundChoicesSelect">
            <option value="">Select</option>
            <option value="SubFunds">SubFunds</option>
            <option value="TimelineChanges">Timeline Changes</option>
            <option value="AllDocuments">All Documents</option>
        </select>
    </div>

    <div id="allDocuments">
        <table class="table table-bordered table-hover">
            <thead>
                @for (int row = 0; row < 1; row++)
                {
                    <tr>
                        @for (int col = 0; col < Model.EntityDocuments[row].Length; col++)
                        {
                            <th class="text-secondary p-1">
                                <h5>
                                    @Model.EntityDocuments[row][col]
                                </h5>
                            </th>
                        }
                    </tr>
                }
            </thead>

            <tbody>
                @for (int row = 1; row < Model.EntityDocuments.Count; row++)
                {
                    <tr>
                        @for (int col = 0; col < Model.EntityDocuments[row].Length; col++)
                        {
                            <td class="p-1">
                                @if (Model.EntityDocuments[0][col] == "File Name")
                                {
                                    <button class="btn-link"
                                            formtarget="_blank"
                                            type="submit"
                                            formaction="/@controllerName/ReadPdfFile"
                                            name="read_Pdf">
                                        @Model.EntityDocuments[row][col]
                                    </button>
                                }
                                else
                                {
                                    @Model.EntityDocuments[row][col]

                                }
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="container py-5"
         id="timelineChanges">
        <div class="row">
            <div class="col-lg-7 mx-auto">
                <ul class="timeline">
                    @for (int row = 1; row < Model.EntityTimeline.Count; row++)
                    {
                        <li class="timeline-item bg-white rounded ml-3 p-4 shadow">
                            <div class="timeline-arrow"></div>
                            <h2 class="h5 mb-0">@Model.EntityTimeline[row][3]</h2>
                            <span class="small text-gray">
                                <i class="fa fa-clock-o mr-1"></i>@Model.EntityTimeline[row][1] - @Model.EntityTimeline[row][2]
                            </span>
                            <p class="text-small mt-2 font-weight-light">@Model.EntityTimeline[row][4]</p>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>

    <div id="subEntities">
        <table class="table table-bordered table-hover table-responsive text-nowrap tableDoubleScroll">
            <thead>
                @for (int row = 0; row < 1; row++)
                {
                    <tr>
                        @for (int col = 0; col < Model.EntitySubEntities[row].Length; col++)
                        {
                            <th class="text-white p-1 tableHeaderPharus">
                                <h5>
                                    @Model.EntitySubEntities[row][col]
                                </h5>
                            </th>
                        }
                    </tr>
                }
            </thead>

            <tbody>
                @for (int row = 1; row < Model.EntitySubEntities.Count; row++)
                {
                    var subfundId = Model.EntitySubEntities[row][2];

                    <tr class="tableRowPharus" onclick="document.location = '/SubFunds/ViewEntitySE/@subfundId/@Model.ChosenDate'">
                        @for (int col = 0; col < Model.EntitySubEntities[row].Length; col++)
                        {
                            <td class="p-1">
                                @Model.EntitySubEntities[row][col]
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</form>

<form asp-controller="Funds"
      asp-action="UploadFiles"
      method="post"
      enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="EntityId" type="text" hidden>
    <input asp-for="StartConnection" type="text" hidden>
    <input asp-for="EndConnection" type="text" hidden>
    <input asp-for="ChosenDate" type="date" hidden>
    <div class="modal"
         id="upDocModal"
         role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body d-grid justify-content-center">
                    <div class="form-group">
                        <select class="form-control maxw-270" asp-for="UploadFundFileModel.FileType" required>
                            <option selected disabled>-- Choose File Type --</option>
                            @foreach (var type in (List<string>)ViewData["FileTypes"])
                            {
                                <option value="@type">@type</option>
                            }
                        </select>
                        <span asp-validation-for="UploadFundFileModel.FileType" class="text-danger"></span>
                    </div>

                    <input asp-for="UploadFundFileModel.FileToUpload" type="file" required>

                    <button type="submit"
                            class="btn bg-pharus text-white">
                        Upload Document
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {

            const url = "/Funds/AutoCompleteSubFundList";
            const entityId = @Model.EntityId;

            $("#SearchTerm").select2({
                placeholder: "Select Sub Funds",
                theme: "classic",
                ajax: {
                    url: url,
                    dataType: "json",
                    delay: 250,
                    data: function (params) {
                        return {
                            searchTerm: params.term,
                            entityId: entityId
                        };
                    },
                    processResults: function (data) {
                        return {
                            results: data
                        }
                    }
                }
            });
        });
    </script>

    <script type="text/javascript" src="~/lib/jquery/dist/jquery.doubleScroll.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('.double-scroll').doubleScroll();
            $('.tableDoubleScroll').doubleScroll({ resetOnWindowResize: true });

            $("#fundChoicesSelect").on('change', function () {
                let dropdownvalue = $("#fundChoicesSelect option:selected").val();
                if (dropdownvalue == 'SubFunds') {
                    $("#subEntities").css('visibility', 'visible');
                    $("#timelineChanges").css('visibility', 'hidden');
                    $("#allDocuments").css('visibility', 'hidden');
                }
                else if (dropdownvalue == 'TimelineChanges') {
                    $("#timelineChanges").css('visibility', 'visible');
                    $("#subEntities").css('visibility', 'hidden');
                    $("#allDocuments").css('visibility', 'hidden');
                }
                else if (dropdownvalue == 'AllDocuments') {
                    $("#allDocuments").css('visibility', 'visible');
                    $("#timelineChanges").css('visibility', 'hidden');
                    $("#subEntities").css('visibility', 'hidden');
                }
                else {
                    $("#subEntities").css('visibility', 'hidden');
                    $("#timelineChanges").css('visibility', 'hidden');
                    $("#allDocuments").css('visibility', 'hidden');
                }
            });
        });
    </script>

    <script type="text/javascript" src="~/js/manageSubEntitiesSelectMenu.js"></script>

    <script>
        window.onload = () => {
            manageSideNavBar();
            manageDropdowns();
            manageSESelectMenu();
        }
    </script>

    <script>
        if (window.history.replaceState) {
            window.history.replaceState(null, null, window.location.href);
        }
    </script>
}