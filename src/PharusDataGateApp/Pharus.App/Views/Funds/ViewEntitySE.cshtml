@model Pharus.App.Models.ViewModels.Entities.SpecificEntityViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var controllerName = this.ViewContext.RouteData.Values["controller"].ToString();
}

@section Styles{
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/smoothness/jquery-ui.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" />
    <style>
        body {
            background-image: none;
        }
    </style>
}

<form asp-controller="Funds"
      class="justify-content-between"
      method="post">

    <partial name="SpecificEntity/_Toolbar" />
    <div class="justify-content-between" id="infoAndDocumentsView">
        <partial name="SpecificEntity/_Info" />
        <partial name="SpecificEntity/_Load_Documents" />
    </div>

    <hr class="bg-pharus hr-2" />

    <div class="row w-25 ml-3">
        <label class="text-torshia m-1 pr-3">FUND ADDITIONAL INFORMATION</label>
        <select class="custom-select-lg select-pharus form-control input-sm"
                id="fundAdditionalInfSelect"
                asp-for="SelectAdditionalInf">
            <option value="" selected disabled>Select</option>
            <option value="SubFunds">Sub Funds</option>
            <option value="TimelineChanges">Timeline Changes</option>
            <option value="AllDocuments">All Documents</option>
            <option value="AllAgreements">All Agreements</option>
        </select>
    </div>

    <partial name="SpecificEntity/_AllDocuments" />
    <partial name="SpecificEntity/_AllAgreements" />
    <partial name="SpecificEntity/_Timeline" />

    <div id="subEntities" class="mt-4">
        <div>
            <div class="d-flex w-100 mb-2" id="toolbar-pharus">
                <partial name="SpecificEntity/SubEntities/_Select" />
                <partial name="SpecificEntity/SubEntities/_Extract" />
            </div>
        </div>
        <partial name="SpecificEntity/SubEntities/_ViewTable" />
        <partial name="SpecificEntity/SubEntities/_BindingTable" />

        <partial name="SpecificEntity/SubEntities/_Modal" />
    </div>
</form>

<form asp-controller="Funds"
      asp-action="UploadProspectus"
      method="post"
      enctype="multipart/form-data">

    <partial name="SpecificEntity/_UploadPros" />
</form>

<form asp-controller="Funds"
      asp-action="UploadAgreement"
      enctype="multipart/form-data">

    <input asp-for="EntityId" type="text" hidden>
    <input asp-for="ChosenDate" type="date" hidden>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="modal"
         id="upAgrModal"
         role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body d-grid justify-content-center" id="agrModalBody">
                    @await Html.PartialAsync("SpecificEntity/_UploadAgr")
                </div>
            </div>
        </div>
    </div>

</form>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>

    <script src="~/js/multiselect.js"></script>
    <script src="~/js/confirmDelete.js"></script>
    <script src="~/js/select2/select2-entity-subentity.js"></script>
    <script src="~/js/select-additional-info/select-fund-addInfo.js"></script>
    <script src="~/lib/jquery/Chart.js/utils.js"></script>
    <script src="~/lib/jquery/Chart.js/Chart.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.doubleScroll.js"></script>

    <script>
        window.onload = () => {
            manageSideNavBar();
            manageDropdowns();
            confirmDelete();
            //window.myLine = new Chart(ctx, config);
        }

        if (window.history.replaceState) {
            window.history.replaceState(null, null, window.location.href);
        }

        $(document).ready(function () {

            // ________________________________________________________
            //
            // Delete selected row from agreements table

            const urlDel = "/Funds/DeleteAgreement";

            $(".confirmDelBtn").on('click', function () {
                const id = $(this).closest('tr').find("td:eq(0)").text().trim();
                const agrName = $(this).closest('tr').find("td:eq(2)").text().trim();
                $.ajax({
                    type: "GET",
                    url: "/Funds/DeleteAgreement",
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    data: { id: id, agrName: agrName },
                    success: function (data) {
                        if (data.data == "false") {
                            alert("Something wrong!");
                            return false;
                        }
                        $("#tbl-distinct-agreements tr:contains('" + data.data +"')").remove();
                    },
                    async: false
                });
            });

            // ________________________________________________________
            //
            // Automatic Scroll if selected value

            const JumpTo = document.getElementById('fundAdditionalInfSelect');
            if (JumpTo.value == "SubFunds") {
                $(this).scrollTop($(JumpTo).position().top);
            }

            // ________________________________________________________
            //
            // Modal multiselect for column selection

            $(".multiselect").multiselect();

            // ________________________________________________________
            //
            // Autocomplete search

            const urlACS = "/Funds/AutoCompleteSubFundList";
            const entityId = @Model.EntityId;

            passUrlAndEntityToSelect(urlACS, entityId);

            // ________________________________________________________
            //
            // Double top scroll for table

            $('.double-scroll').doubleScroll();
            $('#tableDoubleScroll').doubleScroll({ resetOnWindowResize: true });
        });
    </script>
}