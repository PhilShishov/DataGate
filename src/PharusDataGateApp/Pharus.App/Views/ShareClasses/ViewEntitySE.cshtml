@model Pharus.App.Models.ViewModels.Entities.SpecificEntityViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var controllerName = this.ViewContext.RouteData.Values["controller"].ToString();

    var valDatesLabel = @Html.Raw(Json.Serialize(Model.TSPriceDates));
    var valDataBlUSD = @Html.Raw(Json.Serialize(Model.TSPriceBloombergUSD));
    var valDataBlEUR = @Html.Raw(Json.Serialize(Model.TSPriceBloombergEUR));
    var valDataSixEUR = @Html.Raw(Json.Serialize(Model.TSPriceSixUSD));
}

@section Styles{
    <style>
        body {
            background-image: none;
        }
    </style>
}

<form asp-controller="ShareClasses"
      class="justify-content-between"
      method="post">

    <div class="d-flex mt-2 pr-3">
        <p> SUB FUND CONTAINER :</p>
        <a href="/SubFunds/ViewEntitySE/@Model.BaseEntityId/@Model.ChosenDate"
           class="text-torshia font-weight-bold">
            @Model.BaseEntityName
        </a>
    </div>

    <partial name="SpecificEntity/Update_Partial" />

    <div class="d-flex justify-content-between">

        <partial name="SpecificEntity/Info_Partial" />

        <div class="w-60" style="margin-top:-70px;">
            <div style="width:90%;">
                <canvas id="aumSC_Canvas"></canvas>
            </div>

            <partial name="SpecificEntity/Load_Upload_Documents_Partial" />
            @if (this.User.IsInRole("Admin"))
            {
                <div class="mt-5">
                    <a href="/ShareClasses/EditShareClass/@Model.EntityId/@Model.ChosenDate" class="btn btn-primary btn-sm mb-2">Edit ShareClass</a>
                </div>
            }
        </div>
    </div>

    <div class="row w-25 ml-3 mb-5">
        <label class="text-torshia m-1 pr-3">SHARECLASS ADDITIONAL INFORMATION</label>
        <select class="custom-select-lg pharus-select form-control input-sm"
                id="shareClassAdditionalInfSelect"
                asp-for="SelectAdditionalInf">
            <option value="" selected disabled>Select</option>
            <option value="TimelineChanges">Timeline Changes</option>
            <option value="AllDocuments">All Documents</option>
        </select>
    </div>

    <partial name="SpecificEntity/AllDocuments_Partial" />
    <partial name="SpecificEntity/TimeLine_Partial" />
</form>

<form asp-controller="ShareClasses"
      asp-action="UploadProspectus"
      method="post"
      enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <partial name="SpecificEntity/UploadPros_Partial" />
</form>

<form asp-controller="ShareClasses"
      asp-action="UploadAgreement"
      method="post"
      enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <partial name="SpecificEntity/UploadAgr_Partial" />
</form>

@section Scripts{
    <script src="~/lib/jquery/Chart.js/Chart.min.js"></script>
    <script src="~/lib/jquery/Chart.js/utils.js"></script>

    <script>
        window.onload = function () {
            var ctx = document.getElementById('aumSC_Canvas').getContext('2d');
            window.myLine = new Chart(ctx, config);
            manageSideNavBar();
            manageDropdowns();
        };

        if (window.history.replaceState) {
            window.history.replaceState(null, null, window.location.href);
        }

        // ________________________________________________________
        //
        // Select menu for fund additional information -
        // subentities, timeline changes, all documents
        // Get selected value and keep select option open

        $('#shareClassAdditionalInfSelect option').each(function () {
            if (this.selected) {
                const dropdownvalue = $("#shareClassAdditionalInfSelect option:selected").val();
                if (dropdownvalue == 'TimelineChanges') {
                    $("#timelineChanges").css('visibility', 'visible');
                    $("#allDocuments").css('visibility', 'hidden');
                }
                else if (dropdownvalue == 'AllDocuments') {
                    $("#allDocuments").css('visibility', 'visible');
                    $("#timelineChanges").css('visibility', 'hidden');
                }
                else {
                    $("#timelineChanges").css('visibility', 'hidden');
                    $("#allDocuments").css('visibility', 'hidden');
                }
            }
        });

        // ________________________________________________________
        //
        // Select menu for fund additional information -
        // subentities, timeline changes, all documents -
        // On change event for selected value

        $("#shareClassAdditionalInfSelect").on('change', function () {
            const dropdownvalue = $("#shareClassAdditionalInfSelect option:selected").val();
            if (dropdownvalue == 'TimelineChanges') {
                $("#timelineChanges").css('visibility', 'visible');
                $("#allDocuments").css('visibility', 'hidden');
            }
            else if (dropdownvalue == 'AllDocuments') {
                $("#allDocuments").css('visibility', 'visible');
                $("#timelineChanges").css('visibility', 'hidden');
            }
            else {
                $("#timelineChanges").css('visibility', 'hidden');
                $("#allDocuments").css('visibility', 'hidden');
            }
        });
        
        // ________________________________________________________
        //
        // Chart js for Asset under management 

        const config = {
            type: 'line',
            data: {
                labels: @valDatesLabel,
                datasets: [
                    {
                    label: 'Bloomberg EUR',
                    backgroundColor: window.chartColors.red,
                    borderColor: window.chartColors.red,
                    data: @valDataBlEUR,
                    fill: false,
                    },
                    {
                    label: 'Bloomberg USD',
                    backgroundColor: window.chartColors.blue,
                    borderColor: window.chartColors.blue,
                    data: @valDataBlUSD,
                    fill: false,
                    },
                    {
                    label: 'SiX EUR',
                    backgroundColor: window.chartColors.green,
                    borderColor: window.chartColors.green,
                    data: @valDataSixEUR,
                    fill: false,
                    }]
            },
            options: {
                responsive: true,
                title: {
                    display: true,
                    text: 'AUM For ShareClasses'
                },
                tooltips: {
                    mode: 'index',
                    intersect: false,
                },
                hover: {
                    mode: 'nearest',
                    intersect: true
                },
                scales: {
                    x: {
                        display: true,
                        scaleLabel: {
                            display: true,
                            labelString: 'Month'
                        }
                    },
                    y: {
                        display: true,
                        scaleLabel: {
                            display: true,
                            labelString: 'Value'
                        }
                    }
                }
            }
        };
    </script>
}