@model Pharus.App.Models.ViewModels.Entities.ActiveEntitiesViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form class="justify-content-between" method="post">

    <div class="w-100 flex-wrap my-5">
        <label for="date"
               class="text-torshia m-1 pr-3">SELECT DATE:</label>
        <input type="date"
               id="fundDatetime"
               asp-for="ChosenDate"
               min="2018-01-01" max=@DateTime.Today.ToString("yyyy-MM-dd")>

        <input type="submit"
               class="bg-pharus text-white"
               asp-for="Command"
               value="Update Table"></>
    </div>

    <div class="d-flex justify-content-between">

        <div class="table-responsive border-0 w-35" id="tableDoubleScroll">
            <table class="table table-hover">
                <tbody>
                    @for (int row = 1; row < Model.ActiveEntities.Count; row++)
                    {
                        @for (int col = 0; col < Model.ActiveEntities[row].Length; col++)
                        {
                            <tr>
                                <th class="text-secondary p-1">
                                    <h5>
                                        @Model.ActiveEntities[0][col]
                                    </h5>
                                </th>
                                <td class="p-1">
                                    @Model.ActiveEntities[row][col]
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        <div class="w-35 float-right">
            <partial name="SpecificEntityDocumentsPartial" />

            @if (this.User.IsInRole("Admin"))
            {
                <div class="mt-5">
                    <a href="/ShareClasses/EditShareClass/@Model.EntityId" class="btn bg-pharus text-white">Edit ShareClass</a>
                </div>
                <div class="mt-5">
                    <a href="" class="btn bg-pharus text-white">Edit ShareClass Connection</a>
                </div>
            }
        </div>
    </div>
</form>

@section Scripts
        {
    <script type="text/javascript" src="~/js/jquery.doubleScroll.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('.double-scroll').doubleScroll();
            $('#tableDoubleScroll').doubleScroll({ resetOnWindowResize: true });
        });
    </script>
}