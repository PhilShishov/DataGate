@model Pharus.App.Models.BindingModels.ShareClasses.EditShareClassBindingModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Edit Share Class @Model.EntityProperties[1][3]</h4>

<form asp-action="EditShareClass"
      method="post"
      class="d-inline">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="d-inline"
         id="createForm">

        <div class="form-group">
            <label asp-for="InitialDate" class="text-torshia"></label><br>
            <input asp-for="InitialDate"
                   type="date"
                   min="2018-01-01" max=@DateTime.Today.ToString("yyyy-MM-dd")
                   class="form-control maxw-270">
            <span asp-validation-for="InitialDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ShareClassId" class="text-torshia"></label><br>
            <input asp-for="ShareClassId"
                   type="text"
                   class="form-control maxw-270"
                   readonly>
            <span asp-validation-for="ShareClassId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ShareClassName" class="text-torshia"></label><br>
            <input type="text"
                   class="form-control maxw-270"
                   asp-for="ShareClassName">
            <span asp-validation-for="ShareClassName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Status" class="text-torshia"></label><br>
            <select class="form-control maxw-270" asp-for="Status">
                <option selected disabled>-- Choose Status --</option>
                @foreach (var status in (List<string>)ViewData["Status"])
                {
                    if (status == Model.EntityProperties[1][14])
                    {
                        <option selected value="@status">@status</option>
                    }
                    else
                    {
                        <option value="@status">@status</option>
                    }
                }
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CurrencyCode" class="text-torshia"></label><br>
            <select class="form-control maxw-270" asp-for="CurrencyCode">
                <option selected disabled>-- Choose Currency--</option>
                @foreach (var currency in (List<string>)ViewData["CurrencyCode"])
                {
                    if (currency == Model.EntityProperties[1][7])
                    {
                        <option selected value="@currency">@currency</option>
                    }
                    else
                    {
                        <option value="@currency">@currency</option>
                    }
                }
            </select>
            <span asp-validation-for="CurrencyCode" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="InvestorType" class="text-torshia"></label><br>
            <select class="form-control maxw-270" asp-for="InvestorType">
                <option selected disabled>-- Choose Investor Type --</option>
                @foreach (var type in (List<string>)ViewData["InvestorType"])
                {
                    if (type == Model.EntityProperties[1][5])
                    {
                        <option selected value="@type">@type</option>
                    }
                    else
                    {
                        <option value="@type">@type</option>
                    }
                }
            </select>
            <span asp-validation-for="InvestorType" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ShareType" class="text-torshia"></label><br>
            <select class="form-control maxw-270" asp-for="ShareType">
                <option selected disabled>-- Choose Share Type--</option>
                @foreach (var type in (List<string>)ViewData["ShareType"])
                {
                    if (type == Model.EntityProperties[1][6])
                    {
                        <option selected value="@type">@type</option>
                    }
                    else
                    {
                        <option value="@type">@type</option>
                    }
                }
            </select>
            <span asp-validation-for="ShareType" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CountryIssue" class="text-torshia"></label><br>
            <select class="form-control maxw-270" asp-for="CountryIssue">
                <option selected disabled>-- Choose Country Issue --</option>
                @foreach (var issue in (List<string>)ViewData["Country"])
                {
                    if (issue == Model.EntityProperties[1][8])
                    {
                        <option selected value="@issue">@issue</option>
                    }
                    else
                    {
                        <option value="@issue">@issue</option>
                    }
                }
            </select>
            <span asp-validation-for="CountryIssue" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CountryRisk" class="text-torshia"></label><br>
            <select class="form-control maxw-270" asp-for="CountryRisk">
                <option selected disabled>-- Choose Country Risk --</option>
                @foreach (var risk in (List<string>)ViewData["Country"])
                {
                    if (risk == Model.EntityProperties[1][9])
                    {
                        <option selected value="@risk">@risk</option>
                    }
                    else
                    {
                        <option value="@risk">@risk</option>
                    }
                }
            </select>
            <span asp-validation-for="CountryRisk" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="EmissionDate" class="text-torshia"></label><br>
            <input asp-for="EmissionDate"
                   type="date"
                   class="form-control maxw-270">
            <span asp-validation-for="EmissionDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="InceptionDate" class="text-torshia"></label><br>
            <input asp-for="InceptionDate"
                   type="date"
                   class="form-control maxw-270">
            <span asp-validation-for="InceptionDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LastNavDate" class="text-torshia"></label><br>
            <input asp-for="LastNavDate"
                   type="date"
                   class="form-control maxw-270">
            <span asp-validation-for="LastNavDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ExpiryDate" class="text-torshia"></label><br>
            <input asp-for="ExpiryDate"
                   type="date"
                   class="form-control maxw-270">
            <span asp-validation-for="ExpiryDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="InitialPrice" class="text-torshia"></label><br>
            <input type="text"
                   class="form-control maxw-270"
                   asp-for="InitialPrice">
            <span asp-validation-for="InitialPrice" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="AccountingCode" class="text-torshia"></label><br>
            <input type="text"
                   class="form-control maxw-270"
                   asp-for="AccountingCode">
            <span asp-validation-for="AccountingCode" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="IsHedged" class="text-torshia"></label><br>
            <select class="form-control maxw-270"
                    asp-for="IsHedged">
                <option value="No">No</option>
                <option value="Yes">Yes</option>
            </select>
            <span asp-validation-for="IsHedged" class="text-danger"></span>
        </div>

        <div class="form-group">
