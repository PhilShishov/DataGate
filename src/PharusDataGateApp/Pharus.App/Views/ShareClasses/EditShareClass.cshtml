@model Pharus.App.Models.BindingModels.ShareClasses.EditShareClassBindingModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h4>Edit ShareClass @Model.EntityProperties[1][3]</h4>*@

<form asp-action="EditShareClass"
      method="post"
      class="d-inline">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="d-inline"
         id="createForm">







        <div class="form-group">
            <label asp-for="CommentTitle" class="text-torshia"></label><br>
            <input type="text"
                   class="form-control maxw-270"
                   asp-for="CommentTitle"
                   id="regNumberInput">
            <span asp-validation-for="CommentTitle" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CommentArea" class="text-torshia"></label><br>
            <textarea class="form-control maxw-270"
                      asp-for="CommentArea"
                      id="regNumberInput">
            </textarea>
            <span asp-validation-for="CommentArea" class="text-danger"></span>
        </div>
    </div>

    <div class="button-holder mt-4">
        <button type="submit"
                class="btn bg-pharus text-white"
                id="confirmEditBtn"
                name="update_button"
                style="margin-right:40px">
            Update Share Class
        </button>
    </div>
</form>

<div>
    <a asp-action="All">Back to List</a>
</div>

@section Scripts{
    <script src="~/js/formatInput.js"></script>
    <script src="~/js/confirmCreate.js"></script>
    <script src="~/js/getDerivatives.js"></script>

    <script>
        window.onload = () => {
            manageSideNavBar();
            manageDropdowns();
            formatInput();
            getDerivatives();
            confirmCreate();
        }

        if (window.history.replaceState) {
            window.history.replaceState(null, null, window.location.href);
        }
    </script>
}