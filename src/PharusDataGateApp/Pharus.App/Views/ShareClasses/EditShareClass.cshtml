        </div>

        <div class="form-group">
            <label asp-for="ValorCode" class="text-torshia"></label><br>
            <input type="text"
                   class="form-control maxw-270"
                   asp-for="ValorCode">
            <span asp-validation-for="ValorCode" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="FACode" class="text-torshia"></label><br>
            <input type="text"
                   class="form-control maxw-270"
                   asp-for="FACode"
                   id="faCodeInput">
            <span asp-validation-for="FACode" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TACode" class="text-torshia"></label><br>
            <input type="text"
                   class="form-control maxw-270"
                   asp-for="TACode"
                   id="taCodeInput">
            <span asp-validation-for="TACode" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="WKN" class="text-torshia"></label><br>
            <input type="text"
                   class="form-control maxw-270"
                   asp-for="WKN">
            <span asp-validation-for="WKN" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DateBusinessYear" class="text-torshia"></label><br>
            <input asp-for="DateBusinessYear"
                   type="date"
                   class="form-control maxw-270">
            <span asp-validation-for="DateBusinessYear" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ProspectusCode" class="text-torshia"></label><br>
            <input type="text"
                   class="form-control maxw-270"
                   asp-for="ProspectusCode">
            <span asp-validation-for="ProspectusCode" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CommentTitle" class="text-torshia"></label><br>
            <input type="text"
                   class="form-control maxw-270"
                   asp-for="CommentTitle"
                   id="regNumberInput">
            <span asp-validation-for="CommentTitle" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CommentArea" class="text-torshia"></label><br>
            <textarea class="form-control maxw-270"
                      asp-for="CommentArea"
                      id="regNumberInput">
            </textarea>
            <span asp-validation-for="CommentArea" class="text-danger"></span>
        </div>
    </div>

    <div class="button-holder mt-4">
        <button type="submit"
                class="btn bg-pharus text-white"
                id="confirmEditBtn"
                name="update_button"
                style="margin-right:40px">
            Update Share Class
        </button>
    </div>
</form>

<div>
    <a asp-action="All">Back to List</a>
</div>

@section Scripts{
    <script src="~/js/formatInput.js"></script>
    <script src="~/js/confirmCreate.js"></script>
    <script src="~/js/getDerivatives.js"></script>

    <script>
        window.onload = () => {
            manageSideNavBar();
            manageDropdowns();
            formatInput();
            getDerivatives();
            confirmCreate();
        }

        if (window.history.replaceState) {
            window.history.replaceState(null, null, window.location.href);
        }
    </script>
}