@model Pharus.App.Models.ViewModels.Entities.EntitiesViewModel

@{
    ViewData["Title"] = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.0/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" />

    <style>
        body {
            background-image: none;
        }
    </style>
}

<form asp-controller="ShareClasses"
      class="justify-content-between"
      method="post"
      id="entity-form-pharus">
    <div>
        <div>
            <hr class="mt-0 mb-auto" />
            <div class="d-flex w-100" id="toolbar-pharus">
                <partial name="AllEntities/_Select" />
                <partial name="AllEntities/_Update" />
                <partial name="AllEntities/_Extract" />
                <partial name="AllEntities/_Search" />
                <div>
                    <h2 class="text-center text-torshia ml-5" id="entityName">All Share Classes</h2>
                </div>
            </div>
            <hr class="mt-1 mb-0" />
        </div>

        <partial name="AllEntities/_Modal" />
        <partial name="AllEntities/_BindingTable" />
        <partial name="AllEntities/_ViewTable" />
    </div>
</form>

@section Scripts{
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>

    <script src="~/js/submitForm.js"></script>
    <script src="~/js/multiselect.js"></script>
    <script src="~/js/buttonRedirect.js"></script>
    <script src="~/lib/jquery/dist/jquery.doubleScroll.js"></script>

    <script>
        window.onload = () => {
            manageSideNavBar();
            manageDropdowns();
            submitForm();
            buttonRedirect();
        }

        if (window.history.replaceState) {
            window.history.replaceState(null, null, window.location.href);
        }

        $(document).ready(function () {
            // ________________________________________________________
            //
            // Modal multiselect for column selection

            $(".multiselect").multiselect();

            // ________________________________________________________
            //
            // Autocomplete search

            $("#SelectTerm").select2({
                placeholder: "Quick Select",
                theme: "classic",
                ajax: {
                    url: "/ShareClasses/AutoCompleteShareClassesList",
                    dataType: "json",
                    delay: 250,
                    data: function (params) {
                        return { selectTerm: params.term };
                    },
                    processResults: function (data) {
                        return { results: data }
                    }
                }
            });

            // ________________________________________________________
            //
            // Double top scroll for table
            $('.double-scroll').doubleScroll();
            $('#tableDoubleScroll').doubleScroll({ resetOnWindowResize: true });
        });
    </script>
}