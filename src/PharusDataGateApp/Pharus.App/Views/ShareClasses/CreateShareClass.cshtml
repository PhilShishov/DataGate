@model Pharus.App.Models.BindingModels.ShareClasses.ShareClassBindingModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Create New ShareClass</h4>

<form asp-action="CreateShareClass" method="post" class="d-inline">
    <div class="d-inline">
        @for (int row = 0; row < 1; row++)
        {
            @for (int col = 0; col < Model.EntityProperties[row].Length; col++)
            {
                <div>
                    <label class="control-label text-secondary">
                        @Model.EntityProperties[0][col]
                    </label>

                    @if (Model.EntityProperties[0][col] == "INVESTOR TYPE")
                    {
                        <select asp-items="@Model.InvestorType" class="form-control maxw-270"></select>
                    }

                    else if (Model.EntityProperties[0][col] == "SHARE TYPE")
                    {
                        <select asp-items="@Model.ShareType" class="form-control maxw-270"></select>
                    }

                    else if (Model.EntityProperties[0][col] == "CCY")
                    {
                        <select asp-items="@Model.CurrencyCode" class="form-control maxw-270"></select>
                    }

                    else if (Model.EntityProperties[0][col] == "COUNTRY ISSUE")
                    {
                        <select asp-items="@Model.CountryIssue" class="form-control maxw-270"></select>
                    }

                    else if (Model.EntityProperties[0][col] == "ULT PARENT COUNTRY OF RISK")
                    {
                        <select asp-items="@Model.CountryRisk" class="form-control maxw-270"></select>
                    }

                    else if (Model.EntityProperties[0][col] == "SHARE STATUS")
                    {
                        <select asp-items="@Model.ShareStatus" class="form-control maxw-270"></select>
                    }

                    else if (Model.EntityProperties[0][col] == "HEDGED")
                    {
                        <select id="derivatives" class="form-control maxw-270">
                            <option value="No">No</option>
                            <option value="Yes">Yes</option>
                        </select>
                    }

                    else if (Model.EntityProperties[0][col] == "LISTED")
                    {
                        <select id="derivatives" class="form-control maxw-270">
                            <option value="No">No</option>
                            <option value="Yes">Yes</option>
                        </select>
                    }

                    else
                    {
                        <input type="text"
                               class="form-control maxw-270" />
                    }
                </div>
            }
        }
    </div>

    <div class="button-holder mt-4">
        <button type="submit"
                class="btn bg-pharus text-white"
                name="update_button"
                style="margin-right:40px"
                onclick="return confirm('Are you sure you want to update this?')">
            Create ShareClass
        </button>
    </div>
</form>

<div>
    <a asp-action="All">Back to List</a>
</div>