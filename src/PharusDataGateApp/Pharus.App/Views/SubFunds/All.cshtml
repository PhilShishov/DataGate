@model Pharus.App.Models.ViewModels.Entities.EntitiesViewModel

@{
    ViewData["Title"] = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center text-torshia">All Active SubFunds</h2>

@section Styles{
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.0/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" />

    <style>
        body {
            background-image: none;
        }
    </style>
}

<form asp-controller="SubFunds"
      class="justify-content-between"
      method="post">

    <div>
        <partial name="All_Entities_Partial/EntitiesUpdate_Select_Partial" />

        <div class="button-holder d-flex my-5">
            <partial name="All_Entities_Partial/EntitiesSearch_Partial" />
            <div class="w-50 d-flex">
                <partial name="All_Entities_Partial/EntitiesExtract_Partial" />
                <partial name="All_Entities_Partial/EntitiesActiveSwitch_Partial" />
                <partial name="All_Entities_Partial/EntitiesModalButton_Partial" />
            </div>
        </div>

        <partial name="All_Entities_Partial/EntitiesModal_Partial" />

        <hr class="bg-pharus hr-2" />

        <partial name="All_Entities_Partial/EntitiesBindingTable_Partial" />

        <partial name="All_Entities_Partial/EntitiesViewTable_Partial" />
    </div>
</form>

@section Scripts{
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>

    <script src="~/js/checkboxSubmit.js"></script>
    <script src="~/js/ui.multiselect.js"></script>
    <script src="~/lib/jquery/dist/jquery.doubleScroll.js"></script>

    <script>
        window.onload = () => {
            manageSideNavBar();
            manageDropdowns();
            checkboxSubmit();
        }

        if (window.history.replaceState) {
            window.history.replaceState(null, null, window.location.href);
        }

        $(document).ready(function () {
            // ________________________________________________________
            //
            // Modal multiselect for column selection

            $(".multiselect").multiselect();

            // ________________________________________________________
            //
            // Autocomplete search

            $("#SelectTerm").select2({
                placeholder: "Select Subfund",
                theme: "classic",
                ajax: {
                    url: "/SubFunds/AutoCompleteSubFundList",
                    dataType: "json",
                    delay: 250,
                    data: function (params) {
                        return { selectTerm: params.term };
                    },
                    processResults: function (data) {
                        return { results: data }
                    }
                }
            });

            // ________________________________________________________
            //
            // Double top scroll for table
            $('.double-scroll').doubleScroll();
            $('#tableDoubleScroll').doubleScroll({ resetOnWindowResize: true });
        });
    </script>
}