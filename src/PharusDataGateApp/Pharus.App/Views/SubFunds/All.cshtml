@model Pharus.App.Models.ViewModels.Entities.ActiveEntitiesViewModel

@{
    ViewData["Title"] = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center text-torshia">All Active SubFunds</h2>

<form asp-controller="SubFunds" class="justify-content-between" method="post">
    <div>
        <partial name="ContainerActiveEntityPartial" />

        <partial name="ExtractEntitiesViewPartial" />

        <hr class="bg-pharus hr-2" />

        <partial name="EntitiesBindingTablePartial" />

        <partial name="EntitiesViewTablePartial" />

    </div>
</form>

@section Scripts
        {
    <script type="text/javascript" src="~/js/jquery.doubleScroll.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('.double-scroll').doubleScroll();
            $('#tableDoubleScroll').doubleScroll({ resetOnWindowResize: true });
        });
    </script>
}