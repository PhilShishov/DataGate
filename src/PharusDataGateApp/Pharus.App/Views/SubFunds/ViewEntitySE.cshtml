@model Pharus.App.Models.ViewModels.Entities.SpecificEntityViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var controllerName = this.ViewContext.RouteData.Values["controller"].ToString();
}

@section Styles{
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/smoothness/jquery-ui.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" />
    <style>
        body {
            background-image: none;
        }
    </style>
}

<form asp-controller="SubFunds"
      class="justify-content-between"
      method="post">

    <div class="d-flex mt-2 pr-3">
        <p>FUND CONTAINER :</p>
        <a href="/Funds/ViewEntitySE/@Model.BaseEntityId/@Model.ChosenDate"
           class="text-torshia font-weight-bold">
            @Model.BaseEntityName
        </a>
    </div>

    <partial name="SpecificEntity/Update_Partial" />

    <div class="d-flex justify-content-between">

        <partial name="SpecificEntity/Info_Partial" />

        <div class="w-50 float-right">
            <partial name="SpecificEntity/Load_Upload_Documents_Partial" />
            @if (this.User.IsInRole("Admin"))
            {
                <div class="mt-5">
                    <a href="/SubFunds/EditSubFund/@Model.EntityId/@Model.ChosenDate" class="btn btn-primary btn-sm mb-2">Edit SubFund</a>
                </div>
            }
        </div>
    </div>

    <div class="row w-25 ml-3 mb-5">
        <label class="text-torshia m-1 pr-3">SUBFUND ADDITIONAL INFORMATION</label>
        <select class="custom-select-lg pharus-select form-control input-sm"
                id="subFundAdditionalInfSelect"
                asp-for="SelectAdditionalInf">
            <option value="" selected disabled>Select</option>
            <option value="ShareClasses">Share Classes</option>
            <option value="TimelineChanges">Timeline Changes</option>
            <option value="AllDocuments">All Documents</option>
        </select>
    </div>

    <partial name="SpecificEntity/AllDocuments_Partial" />
    <partial name="SpecificEntity/TimeLine_Partial" />

    <partial name="SpecificEntity/SubEntities/AdditionalInfoMenu_Partial" />

    <div id="subEntities">

        <partial name="SpecificEntity/SubEntities/BindingTable_Partial" />
        <partial name="SpecificEntity/SubEntities/Select_Extract_ModalBtn_Partial" />
        <partial name="SpecificEntity/SubEntities/Modal_Partial" />

        <div class="table-responsive border-0 mx-auto" id="tableDoubleScroll">
            <table class="table table-hover text-nowrap">
                <thead>
                    @for (int row = 0; row < 1; row++)
                    {
                        <tr>
                            @for (int col = 0; col < Model.EntitySubEntities[row].Length; col++)
                            {
                                <th class="text-white p-1 tableHeaderPharus">
                                    @Model.EntitySubEntities[row][col]
                                </th>
                            }
                        </tr>
                    }
                </thead>

                <tbody>
                    @for (int row = 1; row < Model.EntitySubEntities.Count; row++)
                    {
                        var shareClassId = Model.EntitySubEntities[row][2];

                        <tr class="tableRowPharus" onclick="document.location = '/ShareClasses/ViewEntitySE/@shareClassId/@Model.ChosenDate'">
                            @for (int col = 0; col < Model.EntitySubEntities[row].Length; col++)
                            {
                                <td class="p-1">
                                    @Model.EntitySubEntities[row][col]
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</form>

<form asp-controller="SubFunds"
      asp-action="UploadProspectus"
      method="post"
      enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <partial name="SpecificEntity/UploadPros_Partial" />
</form>

<form asp-controller="SubFunds"
      asp-action="UploadAgreement"
      method="post"
      enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <partial name="SpecificEntity/UploadAgr_Partial" />
</form>

