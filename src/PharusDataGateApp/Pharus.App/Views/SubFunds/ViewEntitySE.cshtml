@model Pharus.App.Models.ViewModels.Entities.SpecificEntityViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var controllerName = this.ViewContext.RouteData.Values["controller"].ToString();
}

@section Styles{
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/smoothness/jquery-ui.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" />
    <style>
        body {
            background-image: none;
        }
    </style>
}

<form asp-controller="SubFunds"
      class="justify-content-between"
      method="post">

    <partial name="SpecificEntity/_Toolbar" />
    <div class="d-flex justify-content-between">
        <partial name="SpecificEntity/_Info" />
        <partial name="SpecificEntity/_Load_Documents" />
    </div>

    <hr class="bg-pharus hr-2" />

    <div class="row w-25 ml-3"
         id="AtBottomOfForm">
        <label class="text-torshia m-1 pr-3">SUB FUND ADDITIONAL INFORMATION</label>
        <select class="custom-select-lg select-pharus form-control input-sm"
                id="subFundAdditionalInfSelect"
                asp-for="SelectAdditionalInf">
            <option value="" selected disabled>Select</option>
            <option value="ShareClasses">Share Classes</option>
            <option value="TimelineChanges">Timeline Changes</option>
            <option value="AllDocuments">All Documents</option>
        </select>
    </div>

    <partial name="SpecificEntity/_AllDocuments" />
    <partial name="SpecificEntity/_Timeline" />

    <div id="subEntities" class="mt-4">
        <div>
            <div class="d-flex w-100 mb-2" id="toolbar-pharus">
                <partial name="SpecificEntity/SubEntities/_Select" />
                <partial name="SpecificEntity/SubEntities/_Extract" />
            </div>
        </div>
        <partial name="SpecificEntity/SubEntities/_ViewTable" />
        <partial name="SpecificEntity/SubEntities/_BindingTable" />

        <partial name="SpecificEntity/SubEntities/_Modal" />
    </div>
</form>

<form asp-controller="SubFunds"
      asp-action="UploadProspectus"
      method="post"
      enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <partial name="SpecificEntity/_UploadPros" />
</form>

<form asp-controller="SubFunds"
      asp-action="UploadAgreement"
      method="post"
      enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <partial name="SpecificEntity/_UploadAgr" />
</form>

@section Scripts{
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>

    <script src="~/js/multiselect.js"></script>
    <script src="~/lib/jquery/Chart.js/utils.js"></script>
    <script src="~/lib/jquery/Chart.js/Chart.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.doubleScroll.js"></script>

    <script>
        window.onload = () => {
            manageSideNavBar();
            manageDropdowns();
        };

        if (window.history.replaceState) {
            window.history.replaceState(null, null, window.location.href);
            }

        $(document).ready(function () {

            // ________________________________________________________
            //
            // Page Scroll position saver if selected value

            const JumpTo = document.getElementById('subFundAdditionalInfSelect');
            if (JumpTo.value == "ShareClasses") {
                $(this).scrollTop($(JumpTo).position().top);
            }
           
            // ________________________________________________________
            //
            // Modal multiselect for column selection

            $(".multiselect").multiselect();

            // ________________________________________________________
            //
            // Autocomplete search

            const url = "/SubFunds/AutoCompleteShareClassesList";
            const entityId = @Model.EntityId;

            $("#SelectTerm").select2({
                placeholder: "Select Share Classes",
                theme: "classic",
                ajax: {
                    url: url,
                    dataType: "json",
                    delay: 250,
                    data: function (params) {
                        return {
                            selectTerm: params.term,
                            entityId: entityId
                        };
                    },
                    processResults: function (data) {
                        return {
                            results: data
                        }
                    }
                }
            });

            // ________________________________________________________
            //
            // Double top scroll for table

            $('.double-scroll').doubleScroll();
            $('#tableDoubleScroll').doubleScroll({ resetOnWindowResize: true });

            // ________________________________________________________
            //
            // Select menu for fund additional information -
            // subentities, timeline changes, all documents
            // Get selected value and keep select option open

            $('#subFundAdditionalInfSelect option').each(function () {
                if (this.selected) {
                    const dropdownvalue = $("#subFundAdditionalInfSelect option:selected").val();
                    if (dropdownvalue == 'ShareClasses') {
                        $("#subEntities").css('visibility', 'visible');
                        $("#timelineChanges").css('visibility', 'hidden');
                        $("#allDocuments").addClass('d-none');
                    } else if (dropdownvalue == 'TimelineChanges') {
                        $("#timelineChanges").css('visibility', 'visible');
                        $("#subEntities").css('visibility', 'hidden');
                        $("#allDocuments").addClass('d-none');
                    } else if (dropdownvalue == 'AllDocuments') {
                        $("#allDocuments").removeClass('d-none');
                        $("#timelineChanges").css('visibility', 'hidden');
                        $("#subEntities").css('visibility', 'hidden');
                    } else {
                        $("#subEntities").css('visibility', 'hidden');
                        $("#timelineChanges").css('visibility', 'hidden');
                        $("#allDocuments").addClass('d-none');
                    }
                }
            });

            // ________________________________________________________
            //
            // Select menu for fund additional information -
            // subentities, timeline changes, all documents -
            // On change event for selected value

            $("#subFundAdditionalInfSelect").on('change', function () {
                const dropdownvalue = $("#subFundAdditionalInfSelect option:selected").val();
                if (dropdownvalue == 'ShareClasses') {
                    $("#subEntities").css('visibility', 'visible');
                    $("#timelineChanges").css('visibility', 'hidden');
                    $("#allDocuments").addClass('d-none');
                } else if (dropdownvalue == 'TimelineChanges') {
                    $("#timelineChanges").css('visibility', 'visible');
                    $("#subEntities").css('visibility', 'hidden');
                    $("#allDocuments").addClass('d-none');
                } else if (dropdownvalue == 'AllDocuments') {
                    $("#allDocuments").removeClass('d-none');
                    $("#timelineChanges").css('visibility', 'hidden');
                    $("#subEntities").css('visibility', 'hidden');
                } else {
                    $("#subEntities").css('visibility', 'hidden');
                    $("#timelineChanges").css('visibility', 'hidden');
                    $("#allDocuments").addClass('d-none');
                }
            });
        });
    </script>
}